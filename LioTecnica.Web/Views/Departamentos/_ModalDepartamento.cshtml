<div class="modal fade" id="modalDept" tabindex="-1" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
  <div class="modal-dialog modal-lg modal-dialog-scrollable">
    <div class="modal-content" style="border-radius: 18px; border: 1px solid var(--lt-border);">
      <div class="modal-header">
        <div>
          <h5 class="modal-title fw-bold" id="modalDeptTitle">Novo departamento</h5>
          <div class="text-muted small">Cadastre dados principais e vincule a area das vagas.</div>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <input type="hidden" id="deptId">

        <div class="row g-2">
          <div class="col-12 col-md-4">
            <label class="form-label small text-muted">Codigo *</label>
            <input class="form-control" id="deptCodigo" placeholder="DEP-XXX">
          </div>
          <div class="col-12 col-md-8">
            <label class="form-label small text-muted">Departamento *</label>
            <input class="form-control" id="deptNome" placeholder="Ex.: Producao">
          </div>

          <div class="col-12 col-md-6">
            <label class="form-label small text-muted">Area vinculada</label>
            <select class="form-select" id="deptArea"></select>
          </div>
          <div class="col-12 col-md-3">
            <label class="form-label small text-muted">Status</label>
            <select class="form-select" id="deptStatus">
              <option value="ativo">Ativo</option>
              <option value="inativo">Inativo</option>
            </select>
          </div>
          <div class="col-12 col-md-3">
            <label class="form-label small text-muted">Headcount</label>
            <input class="form-control" id="deptHeadcount" type="number" min="0" value="0">
          </div>

          <div class="col-12 col-md-6">
            <label class="form-label small text-muted">Gestor</label>
            <select class="form-select" id="deptGestor"></select>
          </div>
          <div class="col-12 col-md-6">
            <label class="form-label small text-muted">Email</label>
            <input class="form-control" id="deptEmail" placeholder="gestor@liotecnica.com.br">
          </div>

          <div class="col-12 col-md-4">
            <label class="form-label small text-muted">Telefone</label>
            <input class="form-control" id="deptTelefone" placeholder="(11) 90000-0000">
          </div>
          <div class="col-12 col-md-4">
            <label class="form-label small text-muted">Centro de custo</label>
                        <select class="form-select" id="deptCentroCusto"></select>
          </div>
          <div class="col-12 col-md-4">
            <label class="form-label small text-muted">Filial</label>
            <select class="form-select" id="deptFilial"></select>
          </div>

          <div class="col-12">
            <label class="form-label small text-muted">Descricao</label>
            <textarea class="form-control" id="deptDescricao" rows="3" placeholder="Resumo das responsabilidades do departamento."></textarea>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-ghost" type="button" data-bs-dismiss="modal">
          <i class="bi bi-x-lg me-1"></i>Cancelar
        </button>
        <button class="btn btn-brand" type="button" id="btnSaveDept">
          <i class="bi bi-check2 me-1"></i>Salvar
        </button>
      </div>
    </div>
  </div>
</div>

