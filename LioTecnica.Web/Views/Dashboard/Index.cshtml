@{
    ViewData["Title"] = "Portal RH • Liotécnica";
    ViewData["SidebarSubtitle"] = "Recrutamento & Match";
}



      @section Topbar {
<div class="d-flex align-items-center gap-2">
            <button class="btn btn-ghost d-lg-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasSidebar">
              <i class="bi bi-list"></i>
            </button>

            <div class="d-none d-md-block">
              <div class="fw-bold" style="color:var(--lt-primary); line-height:1.05;">Liotécnica • Portal RH</div>
              <small class="text-muted">Vagas, Currículos e Matching automático</small>
            </div>
          </div>

          <div class="searchbox position-relative d-none d-md-block">
            <i class="bi bi-search"></i>
            <input id="globalSearch" class="form-control" placeholder="Buscar vaga, candidato, palavra-chave..." />
          </div>

          <div class="d-flex align-items-center gap-2">
            <button class="btn btn-ghost" type="button" data-bs-toggle="offcanvas" data-bs-target="#drawerFilters">
              <i class="bi bi-sliders"></i>
              <span class="d-none d-sm-inline ms-1">Filtros</span>
            </button>

            <button class="btn btn-brand" type="button" data-bs-toggle="offcanvas" data-bs-target="#drawerQuick">
              <i class="bi bi-plus-lg"></i>
              <span class="d-none d-sm-inline ms-1">Ações</span>
            </button>

            <div class="dropdown">
              <button class="btn btn-ghost dropdown-toggle" data-bs-toggle="dropdown">
                <i class="bi bi-person-circle me-1"></i><span class="d-none d-sm-inline">RH</span>
              </button>
              <ul class="dropdown-menu dropdown-menu-end">
                <li><a class="dropdown-item" href="#"><i class="bi bi-person-gear me-2"></i>Meu perfil</a></li>
                <li><a class="dropdown-item" href="#"><i class="bi bi-bell me-2"></i>Notificações</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item text-danger" href="#"><i class="bi bi-box-arrow-right me-2"></i>Sair</a></li>
              </ul>
            </div>
          </div>
}

      <!-- CONTENT -->
      <section class="content">
        <div class="page-title">
          <div>
            <h4 id="pageH4">Dashboard</h4>
            <div class="subtitle" id="pageSub">Visão geral do dia: vagas, recebimentos e triagem.</div>
          </div>

          <div class="d-flex align-items-center gap-2">
            <span class="badge-soft"><i class="bi bi-clock me-1"></i><span id="nowLabel">—</span></span>
            <span class="badge-soft"><i class="bi bi-lightning-charge me-1"></i>Match automático</span>
          </div>
        </div>

        <!-- KPIs -->
        <div class="row g-3">
          <div class="col-12 col-md-6 col-xl-3">
            <div class="card-soft kpi">
              <div class="meta">
                <div class="label">Vagas abertas</div>
                <div class="value" id="kpiVagas">12</div>
                <div class="hint">+2 na última semana</div>
              </div>
              <div class="icon"><i class="bi bi-briefcase"></i></div>
            </div>
          </div>

          <div class="col-12 col-md-6 col-xl-3">
            <div class="card-soft kpi">
              <div class="meta">
                <div class="label">CVs recebidos hoje</div>
                <div class="value" id="kpiCvsHoje">37</div>
                <div class="hint">Entrada email/pasta</div>
              </div>
              <div class="icon"><i class="bi bi-inbox"></i></div>
            </div>
          </div>

          <div class="col-12 col-md-6 col-xl-3">
            <div class="card-soft kpi">
              <div class="meta">
                <div class="label">Pendentes de match</div>
                <div class="value" id="kpiPendentes">9</div>
                <div class="hint">Fila de processamento</div>
              </div>
              <div class="icon"><i class="bi bi-hourglass-split"></i></div>
            </div>
          </div>

          <div class="col-12 col-md-6 col-xl-3">
            <div class="card-soft kpi">
              <div class="meta">
                <div class="label">Aprovados (7 dias)</div>
                <div class="value" id="kpiAprovados">18</div>
                <div class="hint">+6 vs semana anterior</div>
              </div>
              <div class="icon"><i class="bi bi-patch-check"></i></div>
            </div>
          </div>
        </div>

        <!-- CHART + FUNIL -->
        <div class="row g-3 mt-1">
          <div class="col-12 col-xl-7">
            <div class="card-soft p-3">
              <div class="d-flex align-items-center justify-content-between mb-2">
                <div>
                  <div class="fw-bold">Recebimento de currículos</div>
                  <div class="text-muted small">Últimos 14 dias (mock)</div>
                </div>
                <span class="badge-soft"><i class="bi bi-graph-up me-1"></i>tendência</span>
              </div>
              <canvas id="chartRecebidos" height="110"></canvas>
            </div>
          </div>

          <div class="col-12 col-xl-5">
            <div class="card-soft p-3 h-100">
              <div class="d-flex align-items-center justify-content-between mb-2">
                <div>
                  <div class="fw-bold">Funil de triagem</div>
                  <div class="text-muted small">Visão consolidada (mock)</div>
                </div>
                <button class="btn btn-ghost btn-sm" type="button" data-bs-toggle="offcanvas" data-bs-target="#drawerFilters">
                  <i class="bi bi-funnel"></i>
                </button>
              </div>

              <div class="d-flex flex-column gap-3 mt-2">
                <div>
                  <div class="d-flex justify-content-between small">
                    <span class="text-muted">Recebidos</span><span class="fw-semibold">220</span>
                  </div>
                  <div class="progress"><div class="progress-bar" style="width: 100%"></div></div>
                </div>

                <div>
                  <div class="d-flex justify-content-between small">
                    <span class="text-muted">Triagem</span><span class="fw-semibold">140</span>
                  </div>
                  <div class="progress"><div class="progress-bar" style="width: 64%"></div></div>
                </div>

                <div>
                  <div class="d-flex justify-content-between small">
                    <span class="text-muted">Entrevista</span><span class="fw-semibold">58</span>
                  </div>
                  <div class="progress"><div class="progress-bar" style="width: 26%"></div></div>
                </div>

                <div>
                  <div class="d-flex justify-content-between small">
                    <span class="text-muted">Aprovados</span><span class="fw-semibold">18</span>
                  </div>
                  <div class="progress"><div class="progress-bar" style="width: 8%"></div></div>
                </div>
              </div>

              <div class="mt-3 small text-muted">
                Dica: use “Filtros” para segmentar por vaga, área e período.
              </div>
            </div>
          </div>
        </div>

        <!-- TABELA: MELHORES MATCHES -->
        <div class="card-soft p-3 mt-3">
          <div class="d-flex flex-wrap align-items-center justify-content-between gap-2 mb-2">
            <div>
              <div class="fw-bold">Top matches por vaga</div>
              <div class="text-muted small">Candidatos com maior aderência (mock)</div>
            </div>
            <div class="d-flex gap-2">
              <button class="btn btn-ghost btn-sm" type="button"><i class="bi bi-download me-1"></i>Exportar</button>
              <button class="btn btn-brand btn-sm" type="button" data-bs-toggle="offcanvas" data-bs-target="#drawerQuick">
                <i class="bi bi-plus-lg me-1"></i>Nova vaga
              </button>
            </div>
          </div>

          <div class="table-responsive">
            <table class="table align-middle mb-0">
              <thead>
                <tr>
                  <th style="min-width: 220px;">Vaga</th>
                  <th style="min-width: 200px;">Candidato</th>
                  <th style="min-width: 170px;">Origem</th>
                  <th style="min-width: 240px;">Match</th>
                  <th style="min-width: 170px;">Etapa</th>
                  <th class="text-end" style="min-width: 150px;">Ações</th>
                </tr>
              </thead>
              <tbody id="tblBody">
                <!-- preenchido por JS -->
              </tbody>
            </table>
          </div>
        </div>

        <div style="height: 14px;"></div>
      </section>

      @section Footer {
<div class="d-flex flex-wrap align-items-center justify-content-between gap-2">
          <div>© <span id="year"></span> Liotécnica • Portal RH (MVP)</div>
          <div class="d-flex align-items-center gap-3">
            <span><i class="bi bi-database me-1"></i>Postgres</span>
            <span><i class="bi bi-file-earmark-text me-1"></i>PDF/DOCX</span>
            <span><i class="bi bi-shield-lock me-1"></i>Segurança & LGPD</span>
          </div>
        </div>
}

    

  <!-- RIGHT DRAWER: FILTERS -->
  <div class="offcanvas offcanvas-end offcanvas-custom" tabindex="-1" id="drawerFilters">
    <div class="offcanvas-header border-bottom">
      <div>
        <div class="fw-bold">Filtros e Visões</div>
        <div class="text-muted small">Ajuste o dashboard para a operação do RH</div>
      </div>
      <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body">
      <div class="card-soft p-3 mb-3">
        <div class="fw-semibold mb-2"><i class="bi bi-briefcase me-2"></i>Vaga</div>
        <select class="form-select" id="fVaga">
          <option value="all" selected>Todas</option>
          <option>Analista de Marketing Jr</option>
          <option>Engenheiro de Processos</option>
          <option>Supervisor de Qualidade</option>
          <option>Assistente de RH</option>
        </select>
      </div>

      <div class="card-soft p-3 mb-3">
        <div class="fw-semibold mb-2"><i class="bi bi-calendar3 me-2"></i>Período</div>
        <div class="row g-2">
          <div class="col-6">
            <label class="form-label small text-muted">De</label>
            <input type="date" class="form-control" id="fDe">
          </div>
          <div class="col-6">
            <label class="form-label small text-muted">Até</label>
            <input type="date" class="form-control" id="fAte">
          </div>
        </div>
      </div>

      <div class="card-soft p-3 mb-3">
        <div class="fw-semibold mb-2"><i class="bi bi-stars me-2"></i>Match mínimo</div>
        <input type="range" class="form-range" min="0" max="100" value="70" id="fMatchMin">
        <div class="d-flex justify-content-between small text-muted">
          <span>0%</span><span>50%</span><span>100%</span>
        </div>
        <div class="mt-2 badge-soft">Atual: <span id="matchMinLabel">70%</span></div>
      </div>

      <div class="d-grid gap-2">
        <button class="btn btn-brand" type="button" id="btnApplyFilters">
          <i class="bi bi-check2-circle me-1"></i>Aplicar
        </button>
        <button class="btn btn-ghost" type="button" id="btnResetFilters">
          <i class="bi bi-arrow-counterclockwise me-1"></i>Limpar
        </button>
      </div>

      <hr class="my-4">

      <div class="small text-muted">
        MVP: filtros aplicam em dados mock. Na implementação real, isso vira query no backend + paginação.
      </div>
    </div>
  </div>

  <!-- RIGHT DRAWER: QUICK ACTIONS -->
  <div class="offcanvas offcanvas-end offcanvas-custom" tabindex="-1" id="drawerQuick">
    <div class="offcanvas-header border-bottom">
      <div>
        <div class="fw-bold">Ações rápidas</div>
        <div class="text-muted small">Atalhos para operação do RH</div>
      </div>
      <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
    </div>

    <div class="offcanvas-body">
      <div class="card-soft p-3 mb-3">
        <div class="fw-semibold mb-2"><i class="bi bi-plus-circle me-2"></i>Criar vaga (mock)</div>
        <div class="row g-2">
          <div class="col-12">
            <label class="form-label small text-muted">Título</label>
            <input class="form-control" placeholder="Ex.: Analista de Marketing Jr">
          </div>
          <div class="col-6">
            <label class="form-label small text-muted">Área</label>
            <select class="form-select">
              <option>Marketing</option>
              <option>Qualidade</option>
              <option>Produção</option>
              <option>RH</option>
              <option>TI</option>
            </select>
          </div>
          <div class="col-6">
            <label class="form-label small text-muted">Status</label>
            <select class="form-select">
              <option>Aberta</option>
              <option>Pausada</option>
              <option>Fechada</option>
            </select>
          </div>
          <div class="col-12">
            <label class="form-label small text-muted">Palavras-chave (separadas por vírgula)</label>
            <input class="form-control" placeholder="Ex.: power bi, seo, redes sociais, crm">
          </div>
        </div>
        <div class="d-grid mt-3">
          <button class="btn btn-brand" type="button" id="btnMockCreateVaga">
            <i class="bi bi-check2 me-1"></i>Salvar (mock)
          </button>
        </div>
      </div>

      <div class="card-soft p-3 mb-3">
        <div class="fw-semibold mb-2"><i class="bi bi-inbox me-2"></i>Entrada de currículos</div>
        <div class="d-flex flex-column gap-2">
          <button class="btn btn-ghost" type="button"><i class="bi bi-envelope me-2"></i>Conectar caixa de e-mail</button>
          <button class="btn btn-ghost" type="button"><i class="bi bi-folder2-open me-2"></i>Configurar pasta monitorada</button>
          <button class="btn btn-ghost" type="button"><i class="bi bi-play-circle me-2"></i>Rodar processamento agora</button>
        </div>
      </div>

      <div class="card-soft p-3">
        <div class="fw-semibold mb-2"><i class="bi bi-stars me-2"></i>Motor de match</div>
        <div class="small text-muted mb-2">
          Ajustes (MVP): pesos, obrigatórios e sinônimos por vaga.
        </div>
        <button class="btn btn-brand w-100" type="button">
          <i class="bi bi-sliders me-1"></i>Abrir configurações
        </button>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->

@section Scripts {
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
<script src="~/js/views/dashboard.js" asp-append-version="true"></script>
}
