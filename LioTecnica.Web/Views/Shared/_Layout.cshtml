          <small class="text-muted">@sidebarSubtitle</small>
        </div>
      </div>
      <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body p-0 sidebar-scroll">
      <div class="p-2">
        <div class="small text-uppercase text-muted px-2 mt-2">Navegação</div>
        <div class="nav flex-column">
          <a class="nav-link rounded-3 px-3 py-2 @NavMobileActive("Dashboard")" asp-controller="Dashboard" asp-action="Index"><i class="bi bi-speedometer2 me-2"></i>Dashboard</a>
          <a class="nav-link rounded-3 px-3 py-2 @NavMobileActive("Vagas")" asp-controller="Vagas" asp-action="Index"><i class="bi bi-briefcase me-2"></i>Vagas</a>
          <a class="nav-link rounded-3 px-3 py-2 @NavMobileActive("Candidatos")" asp-controller="Candidatos" asp-action="Index"><i class="bi bi-people me-2"></i>Candidatos</a>
          <a class="nav-link rounded-3 px-3 py-2 @NavMobileActive("Triagem")" asp-controller="Triagem" asp-action="Index"><i class="bi bi-funnel me-2"></i>Triagem</a>
          <a class="nav-link rounded-3 px-3 py-2 @NavMobileActive("Matching")" asp-controller="Matching" asp-action="Index"><i class="bi bi-stars me-2"></i>Matching</a>
          <a class="nav-link rounded-3 px-3 py-2 @NavMobileActive("EntradaEmailPasta")" asp-controller="EntradaEmailPasta" asp-action="Index"><i class="bi bi-inbox me-2"></i>Entrada (Email/Pasta)</a>
