@functions {
  private string NavActive(string controller)
  {
    var current = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    return current.Equals(controller, StringComparison.OrdinalIgnoreCase) ? "active" : "";
  }

  private string NavMobileActive(string controller)
  {
    var current = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    return current.Equals(controller, StringComparison.OrdinalIgnoreCase) ? "fw-semibold" : "";
  }
}
@{
  var sidebarSubtitle = ViewData["SidebarSubtitle"]?.ToString() ?? "Recrutamento & Match";
}
<!doctype html>
<html lang="pt-br">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>@ViewData["Title"]</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
  <div id="globalLoading" class="loading-overlay active" aria-live="polite" aria-busy="true">
    <div class="panel">
      <div class="spinner-border text-primary" role="status" aria-hidden="true"></div>
      <div>Aguarde. Carregando..</div>
    </div>
  </div>

  <!-- MOBILE SIDEBAR OFFCANVAS -->
  <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasSidebar">
    <div class="offcanvas-header border-bottom">
      <div class="d-flex align-items-center gap-2">
        <img id="logoMobile" alt="Liotécnica" style="width:34px;height:34px;border-radius:10px;background:#fff;padding:6px;object-fit:contain;">
        <div class="lh-1">
          <div class="fw-bold" style="color:var(--lt-primary)">Portal RH</div>
          <small class="text-muted">@sidebarSubtitle</small>
        </div>
      </div>
      <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body p-0 sidebar-scroll">
      <div class="p-2">
        <div class="small text-uppercase text-muted px-2 mt-2">Navegação</div>
        <div class="nav flex-column">
          <a class="nav-link rounded-3 px-3 py-2 @NavMobileActive("Dashboard")" asp-controller="Dashboard" asp-action="Index"><i class="bi bi-speedometer2 me-2"></i>Dashboard</a>
          <a class="nav-link rounded-3 px-3 py-2 @NavMobileActive("Vagas")" asp-controller="Vagas" asp-action="Index"><i class="bi bi-briefcase me-2"></i>Vagas</a>
          <a class="nav-link rounded-3 px-3 py-2 @NavMobileActive("Candidatos")" asp-controller="Candidatos" asp-action="Index"><i class="bi bi-people me-2"></i>Candidatos</a>
          <a class="nav-link rounded-3 px-3 py-2 @NavMobileActive("Triagem")" asp-controller="Triagem" asp-action="Index"><i class="bi bi-funnel me-2"></i>Triagem</a>
          <a class="nav-link rounded-3 px-3 py-2 @NavMobileActive("Matching")" asp-controller="Matching" asp-action="Index"><i class="bi bi-stars me-2"></i>Matching</a>
          <a class="nav-link rounded-3 px-3 py-2 @NavMobileActive("EntradaEmailPasta")" asp-controller="EntradaEmailPasta" asp-action="Index"><i class="bi bi-inbox me-2"></i>Entrada (Email/Pasta)</a>
          <a class="nav-link rounded-3 px-3 py-2 @NavMobileActive("Relatorios")" asp-controller="Relatorios" asp-action="Index"><i class="bi bi-graph-up me-2"></i>Relatórios</a>
          <a class="nav-link rounded-3 px-3 py-2 @NavMobileActive("UsuariosPerfis")" asp-controller="UsuariosPerfis" asp-action="Index"><i class="bi bi-person-gear me-2"></i>Usuários & Perfis</a>
          <a class="nav-link rounded-3 px-3 py-2" href="#"><i class="bi bi-diagram-3 me-2"></i>RM Labore</a>
          <a class="nav-link rounded-3 px-3 py-2" href="#"><i class="bi bi-gear me-2"></i>Configurações</a>
        </div>
      </div>
    </div>
  </div>

  <div class="app-shell">
    <!-- DESKTOP SIDEBAR -->
    <aside class="sidebar d-none d-lg-block">
      <div class="sidebar-inner">
        <div class="brand">
          <img id="logoDesktop" alt="Liotécnica" src="https://ugc.production.linktr.ee/cR5FRLAQhMjM5iY6KkQV_N7guc4j7zk8o2yfc?io=true&size=avatar-v3_0">
          <div class="title">
            <strong>Portal RH</strong>
            <span>@sidebarSubtitle</span>
          </div>
        </div>

        <div class="sidebar-scroll">
        <div class="nav-section">Operação</div>
        <nav class="nav flex-column">
          <a class="nav-link @NavActive("Dashboard")" asp-controller="Dashboard" asp-action="Index"><i class="bi bi-speedometer2"></i>Dashboard</a>
          <a class="nav-link @NavActive("Vagas")" asp-controller="Vagas" asp-action="Index"><i class="bi bi-briefcase"></i>Vagas</a>
          <a class="nav-link @NavActive("Candidatos")" asp-controller="Candidatos" asp-action="Index"><i class="bi bi-people"></i>Candidatos</a>
          <a class="nav-link @NavActive("Triagem")" asp-controller="Triagem" asp-action="Index"><i class="bi bi-funnel"></i>Triagem</a>
          <a class="nav-link @NavActive("Matching")" asp-controller="Matching" asp-action="Index"><i class="bi bi-stars"></i>Matching</a>
        </nav>

        <div class="nav-section mt-2">Integrações</div>
        <nav class="nav flex-column">
          <a class="nav-link @NavActive("EntradaEmailPasta")" asp-controller="EntradaEmailPasta" asp-action="Index"><i class="bi bi-inbox"></i>Entrada (Email/Pasta)</a>
          <a class="nav-link" href="#"><i class="bi bi-diagram-3"></i>RM Labore</a>
        </nav>

        <div class="nav-section mt-2">Gestão</div>
        <nav class="nav flex-column">
          <a class="nav-link @NavActive("Relatorios")" asp-controller="Relatorios" asp-action="Index"><i class="bi bi-graph-up"></i>Relatórios</a>
          <a class="nav-link @NavActive("UsuariosPerfis")" asp-controller="UsuariosPerfis" asp-action="Index"><i class="bi bi-person-gear"></i>Usuários & Perfis</a>
          <a class="nav-link" href="#"><i class="bi bi-gear"></i>Configurações</a>
        </nav>
        </div>

        <div class="sidebar-footer">
          <div class="d-flex align-items-center justify-content-between gap-2">
            <div class="small" style="opacity:.92;">
              <div class="fw-semibold">Ambiente</div>
              <div class="opacity-75">DEV • Postgres</div>
            </div>
            <span class="pill"><i class="bi bi-shield-check"></i>LGPD</span>
          </div>
        </div>
      </div>
    </aside>

    <!-- MAIN -->
    <main class="main">
      <header class="topbar">
        <div class="topbar-inner">
          @RenderSection("Topbar", required: true)
        </div>
      </header>

      @RenderBody()

      <footer class="footer">
        @RenderSection("Footer", required: true)
      </footer>
    </main>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>
  @RenderSection("Scripts", required: false)
</body>
</html>
