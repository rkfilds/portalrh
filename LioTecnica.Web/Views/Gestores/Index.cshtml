@model PageSeedViewModel
@{
    ViewData["Title"] = "Portal RH - Liotecnica - Gestores";
    ViewData["SidebarSubtitle"] = "Gestores";
}

@await Html.PartialAsync("_ModalGestor")
@await Html.PartialAsync("_ModalGestorVagas")
@await Html.PartialAsync("_Toast")

@section Topbar {
    @await Html.PartialAsync("_TopbarBrand", "Tela: Gestores")

    <div class="searchbox position-relative d-none d-md-block">
      <i class="bi bi-search"></i>
      <input id="globalSearchGestor" class="form-control" placeholder="Buscar gestor..." />
    </div>

    <div class="d-flex align-items-center gap-2">
      <button class="btn btn-ghost" type="button" id="btnExportGestor" title="Exportar gestores (CSV)">
        <i class="bi bi-filetype-csv"></i><span class="d-none d-sm-inline ms-1">Exportar</span>
      </button>
      <button class="btn btn-ghost" type="button" id="btnSeedReset" title="Restaurar demo">
        <i class="bi bi-arrow-counterclockwise"></i><span class="d-none d-sm-inline ms-1">Reset demo</span>
      </button>
      <button class="btn btn-brand" type="button" id="btnNewGestor">
        <i class="bi bi-plus-lg"></i><span class="d-none d-sm-inline ms-1">Novo gestor</span>
      </button>
      @await Html.PartialAsync("_TopbarUserMenu", "RH")
    </div>
}

<section class="content">
  <div class="page-title">
    <div>
      <h4>Gestores</h4>
      <div class="subtitle">Cadastro de gestores, areas e equipes.</div>
    </div>
    <div class="d-flex align-items-center gap-2">
      <span class="badge-soft"><i class="bi bi-clock me-1"></i><span id="nowLabel">-</span></span>
      <span class="badge-soft"><i class="bi bi-hdd me-1"></i>localStorage</span>
    </div>
  </div>

  @{
    var kpis = new[]
    {
      new { ColClass = "col-6 col-lg-3", Title = "Gestores", ValueStyle = "font-size:1.6rem;color:var(--lt-primary);", ValueId = "kpiGestorTotal", Value = "0", PillIcon = "bi-person-badge", PillText = "total", Hint = "Gestores cadastrados." },
      new { ColClass = "col-6 col-lg-3", Title = "Ativos", ValueStyle = "font-size:1.6rem;color:var(--lt-primary);", ValueId = "kpiGestorActive", Value = "0", PillIcon = "bi-check2-circle", PillText = "ativo", Hint = "Gestores em operacao." },
      new { ColClass = "col-6 col-lg-3", Title = "Vagas abertas", ValueStyle = "font-size:1.6rem;color:var(--lt-primary);", ValueId = "kpiGestorOpenRoles", Value = "0", PillIcon = "bi-briefcase", PillText = "abertas", Hint = "Total de vagas abertas." },
      new { ColClass = "col-6 col-lg-3", Title = "Headcount", ValueStyle = "font-size:1.6rem;color:var(--lt-primary);", ValueId = "kpiGestorHeadcount", Value = "0", PillIcon = "bi-people", PillText = "pessoas", Hint = "Soma do headcount informado." }
    };
  }
  @await Html.PartialAsync("_KpiMiniRow", kpis)

  <div class="card-soft p-3 mb-3">
    <div class="d-flex flex-wrap align-items-end justify-content-between gap-2">
      <div>
        <div class="fw-bold">Lista de gestores</div>
        <div class="text-muted small">Clique em um gestor para ver vagas relacionadas.</div>
      </div>
      <div class="d-flex flex-wrap gap-2 justify-content-end">
        <div style="min-width:240px;">
          <label class="form-label small mb-1">Buscar</label>
          <div class="input-group">
            <span class="input-group-text" style="background:rgba(255,255,255,.65)"><i class="bi bi-search"></i></span>
            <input class="form-control" id="gSearch" placeholder="nome, area, email...">
          </div>
        </div>
        <div>
          <label class="form-label small mb-1">Status</label>
          <select class="form-select" id="gStatus">
            <option value="all">Todos</option>
            <option value="ativo">Ativo</option>
            <option value="inativo">Inativo</option>
          </select>
        </div>
      </div>
    </div>

    <hr class="my-3 divider">

    <div class="table-responsive">
      <table class="table table-sm align-middle mb-0">
        <thead>
          <tr>
            <th>Gestor</th>
            <th>Area</th>
            <th>Unidade</th>
            <th>Headcount</th>
            <th>Status</th>
            <th>Vagas</th>
            <th class="text-end">Acoes</th>
          </tr>
        </thead>
        <tbody id="gestorTbody"></tbody>
      </table>
    </div>

    <div class="d-flex align-items-center justify-content-between mt-2">
      <div class="text-muted small" id="gestorHint">-</div>
      <div class="d-flex align-items-center gap-2">
        <span class="pill"><i class="bi bi-table"></i><span id="gestorCount">0</span> exibidos</span>
      </div>
    </div>
  </div>

  <template id="tpl-gestor-row">
    <tr>
      <td>
        <div class="fw-semibold" data-role="gestor-nome"></div>
        <div class="text-muted small" data-role="gestor-cargo"></div>
      </td>
      <td>
        <div class="fw-semibold" data-role="gestor-area"></div>
        <div class="text-muted small" data-role="gestor-email"></div>
      </td>
      <td data-role="gestor-unidade"></td>
      <td class="mono" data-role="gestor-headcount"></td>
      <td><span data-role="gestor-status-host"></span></td>
      <td class="mono" data-role="gestor-vagas"></td>
      <td class="text-end">
        <button class="btn btn-ghost btn-sm me-1" type="button" data-act="detail">
          <i class="bi bi-eye"></i>
        </button>
        <button class="btn btn-ghost btn-sm me-1" type="button" data-act="edit">
          <i class="bi bi-pencil"></i>
        </button>
        <button class="btn btn-ghost btn-sm text-danger" type="button" data-act="del">
          <i class="bi bi-trash3"></i>
        </button>
      </td>
    </tr>
  </template>

  <template id="tpl-gestor-empty-row">
    <tr>
      <td colspan="7" class="text-center text-muted py-3">Nenhum gestor encontrado.</td>
    </tr>
  </template>

  <div style="height:14px;"></div>
</section>

@section Footer {
  @{
    var footerItems = new[]
    {
      new { Icon = "bi-person-badge", Text = "Gestores", Id = "", Class = "" },
      new { Icon = "bi-shield-check", Text = "LGPD", Id = "", Class = "" },
      new { Icon = "", Text = "build: demo", Id = "buildId", Class = "mono muted" }
    };
  }
  @await Html.PartialAsync("_Footer", footerItems)
}

@section Scripts {
  <script>
    window.__seedData = @Html.Raw(Model.SeedJson);
  </script>
  <script src="~/js/views/gestores.js" asp-append-version="true"></script>
}
