<!doctype html>
<html lang="pt-br">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>@ViewData["Title"]</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
  <div id="globalLoading" class="loading-overlay active" aria-live="polite" aria-busy="true">
    <div class="panel">
      <div class="spinner-border text-primary" role="status" aria-hidden="true"></div>
      <div>Aguarde. Carregando..</div>
    </div>
  </div>

  <!-- MOBILE SIDEBAR OFFCANVAS -->
  @await Html.PartialAsync("_OffcanvasSidebar")

  <div class="app-shell">
    <!-- DESKTOP SIDEBAR -->
    <aside class="sidebar d-none d-lg-block">
      <div class="sidebar-inner">
        <div class="brand">
          <img id="logoDesktop" alt="Devcraft Studio" src="https://ugc.production.linktr.ee/cR5FRLAQhMjM5iY6KkQV_N7guc4j7zk8o2yfc?io=true&size=avatar-v3_0">
          <div class="title">
            <strong>Portal RH</strong>
            <span>@ViewHelpers.SidebarSubtitle(ViewData)</span>
          </div>
        </div>

        <div class="sidebar-scroll">
        <div class="nav-section">Operação</div>
        <nav class="nav flex-column">
          <a class="nav-link @ViewHelpers.NavActive(ViewContext, "Dashboard")" asp-controller="Dashboard" asp-action="Index"><i class="bi bi-speedometer2"></i>Dashboard</a>
          <a class="nav-link @ViewHelpers.NavActive(ViewContext, "Vagas")" asp-controller="Vagas" asp-action="Index"><i class="bi bi-briefcase"></i>Vagas</a>
          <a class="nav-link @ViewHelpers.NavActive(ViewContext, "Candidatos")" asp-controller="Candidatos" asp-action="Index"><i class="bi bi-people"></i>Candidatos</a>
          <a class="nav-link @ViewHelpers.NavActive(ViewContext, "Triagem")" asp-controller="Triagem" asp-action="Index"><i class="bi bi-funnel"></i>Triagem</a>
          <a class="nav-link @ViewHelpers.NavActive(ViewContext, "Matching")" asp-controller="Matching" asp-action="Index"><i class="bi bi-stars"></i>Matching</a>
        </nav>

        <div class="nav-section mt-2">Integrações</div>
        <nav class="nav flex-column">
          <a class="nav-link @ViewHelpers.NavActive(ViewContext, "EntradaEmailPasta")" asp-controller="EntradaEmailPasta" asp-action="Index"><i class="bi bi-inbox"></i>Entrada (Email/Pasta)</a>
          <a class="nav-link" href="#"><i class="bi bi-diagram-3"></i>RM Labore</a>
        </nav>

        <div class="nav-section mt-2">Gestão</div>
        <nav class="nav flex-column">
          <a class="nav-link @ViewHelpers.NavActive(ViewContext, "Relatorios")" asp-controller="Relatorios" asp-action="Index"><i class="bi bi-graph-up"></i>Relatórios</a>
          <a class="nav-link @ViewHelpers.NavActive(ViewContext, "Departamentos")" asp-controller="Departamentos" asp-action="Index"><i class="bi bi-diagram-2"></i>Departamentos</a>
          <a class="nav-link @ViewHelpers.NavActive(ViewContext, "Areas")" asp-controller="Areas" asp-action="Index"><i class="bi bi-diagram-3"></i>Areas</a>
          <a class="nav-link @ViewHelpers.NavActive(ViewContext, "Gestores")" asp-controller="Gestores" asp-action="Index"><i class="bi bi-person-badge"></i>Gestores</a>
          <a class="nav-link @ViewHelpers.NavActive(ViewContext, "UsuariosPerfis")" asp-controller="UsuariosPerfis" asp-action="Index"><i class="bi bi-person-gear"></i>Usuários & Perfis</a>
          <a class="nav-link" href="#"><i class="bi bi-gear"></i>Configurações</a>
        </nav>
        </div>

        <div class="sidebar-footer">
          <div class="d-flex align-items-center justify-content-between gap-2">
            <div class="small" style="opacity:.92;">
              <div class="fw-semibold">Ambiente</div>
              <div class="opacity-75">DEV • Postgres</div>
            </div>
            <span class="pill"><i class="bi bi-shield-check"></i>LGPD</span>
          </div>
        </div>
      </div>
    </aside>

    <!-- MAIN -->
    <main class="main">
      <header class="topbar">
        <div class="topbar-inner">
          @RenderSection("Topbar", required: true)
        </div>
      </header>

      @RenderBody()

      <footer class="footer">
        @RenderSection("Footer", required: true)
      </footer>
    </main>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    window.__enumData = @Html.Raw(EnumOptionsHelper.BuildJson());
  </script>
  <script src="~/js/site.js" asp-append-version="true"></script>
  @RenderSection("Scripts", required: false)
</body>
</html>