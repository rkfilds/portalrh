@model PageSeedViewModel
@{
    ViewData["Title"] = "Portal RH - Liotecnica - Areas";
    ViewData["SidebarSubtitle"] = "Areas";
}

@await Html.PartialAsync("_ModalArea")
@await Html.PartialAsync("_ModalAreaVagas")
@await Html.PartialAsync("_Toast")

@section Topbar {
    @await Html.PartialAsync("_TopbarBrand", "Tela: Areas")

    <div class="searchbox position-relative d-none d-md-block">
      <i class="bi bi-search"></i>
      <input id="globalSearchArea" class="form-control" placeholder="Buscar area..." />
    </div>

    <div class="d-flex align-items-center gap-2">
      <button class="btn btn-ghost" type="button" id="btnExportArea" title="Exportar areas (CSV)">
        <i class="bi bi-filetype-csv"></i><span class="d-none d-sm-inline ms-1">Exportar</span>
      </button>
      <button class="btn btn-ghost" type="button" id="btnSeedReset" title="Restaurar demo">
        <i class="bi bi-arrow-counterclockwise"></i><span class="d-none d-sm-inline ms-1">Reset demo</span>
      </button>
      <button class="btn btn-brand" type="button" id="btnNewArea">
        <i class="bi bi-plus-lg"></i><span class="d-none d-sm-inline ms-1">Nova area</span>
      </button>
      @await Html.PartialAsync("_TopbarUserMenu", "RH")
    </div>
}

<section class="content">
  <div class="page-title">
    <div>
      <h4>Areas</h4>
      <div class="subtitle">Gerencie areas usadas em vagas, departamentos e gestores.</div>
    </div>
    <div class="d-flex align-items-center gap-2">
      <span class="badge-soft"><i class="bi bi-clock me-1"></i><span id="nowLabel">-</span></span>
      <span class="badge-soft"><i class="bi bi-hdd me-1"></i>localStorage</span>
    </div>
  </div>

  @{
    var kpis = new[]
    {
      new { ColClass = "col-6 col-lg-3", Title = "Areas", ValueStyle = "font-size:1.6rem;color:var(--lt-primary);", ValueId = "kpiAreaTotal", Value = "0", PillIcon = "bi-diagram-2", PillText = "total", Hint = "Areas cadastradas." },
      new { ColClass = "col-6 col-lg-3", Title = "Ativas", ValueStyle = "font-size:1.6rem;color:var(--lt-primary);", ValueId = "kpiAreaActive", Value = "0", PillIcon = "bi-check2-circle", PillText = "ativo", Hint = "Areas em operacao." },
      new { ColClass = "col-6 col-lg-3", Title = "Vagas abertas", ValueStyle = "font-size:1.6rem;color:var(--lt-primary);", ValueId = "kpiAreaOpenRoles", Value = "0", PillIcon = "bi-briefcase", PillText = "abertas", Hint = "Total de vagas abertas." },
      new { ColClass = "col-6 col-lg-3", Title = "Vagas total", ValueStyle = "font-size:1.6rem;color:var(--lt-primary);", ValueId = "kpiAreaTotalRoles", Value = "0", PillIcon = "bi-collection", PillText = "vagas", Hint = "Total de vagas cadastradas." }
    };
  }
  @await Html.PartialAsync("_KpiMiniRow", kpis)

  <div class="card-soft p-3 mb-3">
    <div class="d-flex flex-wrap align-items-end justify-content-between gap-2">
      <div>
        <div class="fw-bold">Lista de areas</div>
        <div class="text-muted small">Clique em uma area para ver vagas relacionadas.</div>
      </div>
      <div class="d-flex flex-wrap gap-2 justify-content-end">
        <div style="min-width:240px;">
          <label class="form-label small mb-1">Buscar</label>
          <div class="input-group">
            <span class="input-group-text" style="background:rgba(255,255,255,.65)"><i class="bi bi-search"></i></span>
            <input class="form-control" id="aSearch" placeholder="nome, codigo...">
          </div>
        </div>
        <div>
          <label class="form-label small mb-1">Status</label>
          <select class="form-select" id="aStatus">
            <option value="all">Todos</option>
            <option value="ativo">Ativo</option>
            <option value="inativo">Inativo</option>
          </select>
        </div>
      </div>
    </div>

    <hr class="my-3 divider">

    <div class="table-responsive">
      <table class="table table-sm align-middle mb-0">
        <thead>
          <tr>
            <th>Area</th>
            <th>Status</th>
            <th>Vagas</th>
            <th>Descricao</th>
            <th class="text-end">Acoes</th>
          </tr>
        </thead>
        <tbody id="areaTbody"></tbody>
      </table>
    </div>

    <div class="d-flex align-items-center justify-content-between mt-2">
      <div class="text-muted small" id="areaHint">-</div>
      <div class="d-flex align-items-center gap-2">
        <span class="pill"><i class="bi bi-table"></i><span id="areaCount">0</span> exibidas</span>
      </div>
    </div>
  </div>

  <template id="tpl-area-row">
    <tr>
      <td>
        <div class="fw-semibold" data-role="area-name"></div>
        <div class="text-muted small" data-role="area-code"></div>
      </td>
      <td><span data-role="area-status-host"></span></td>
      <td class="mono" data-role="area-vagas"></td>
      <td data-role="area-desc"></td>
      <td class="text-end">
        <button class="btn btn-ghost btn-sm me-1" type="button" data-act="detail">
          <i class="bi bi-eye"></i>
        </button>
        <button class="btn btn-ghost btn-sm me-1" type="button" data-act="edit">
          <i class="bi bi-pencil"></i>
        </button>
        <button class="btn btn-ghost btn-sm text-danger" type="button" data-act="del">
          <i class="bi bi-trash3"></i>
        </button>
      </td>
    </tr>
  </template>

  <template id="tpl-area-empty-row">
    <tr>
      <td colspan="5" class="text-center text-muted py-3">Nenhuma area encontrada.</td>
    </tr>
  </template>

  <div style="height:14px;"></div>
</section>

@section Footer {
  @{
    var footerItems = new[]
    {
      new { Icon = "bi-diagram-2", Text = "Areas", Id = "", Class = "" },
      new { Icon = "bi-shield-check", Text = "LGPD", Id = "", Class = "" },
      new { Icon = "", Text = "build: demo", Id = "buildId", Class = "mono muted" }
    };
  }
  @await Html.PartialAsync("_Footer", footerItems)
}

@section Scripts {
  <script>
    window.__seedData = @Html.Raw(Model.SeedJson);
  </script>
  <script src="~/js/views/areas.js" asp-append-version="true"></script>
}
