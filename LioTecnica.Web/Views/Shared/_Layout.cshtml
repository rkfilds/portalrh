          <a class="nav-link @NavActive("Vagas")" asp-controller="Vagas" asp-action="Index"><i class="bi bi-briefcase"></i>Vagas</a>
          <a class="nav-link @NavActive("Candidatos")" asp-controller="Candidatos" asp-action="Index"><i class="bi bi-people"></i>Candidatos</a>
          <a class="nav-link @NavActive("Triagem")" asp-controller="Triagem" asp-action="Index"><i class="bi bi-funnel"></i>Triagem</a>
