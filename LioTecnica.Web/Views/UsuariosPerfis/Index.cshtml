@model PageSeedViewModel
@{
    ViewData["Title"] = "Portal RH • Ambiente DEV • Usuários & Perfis";
    ViewData["SidebarSubtitle"] = "Usuários & Perfis";
}



<!-- MOBILE SIDEBAR OFFCANVAS -->
  

  <!-- Drawer: detalhes do usuário -->
  @await Html.PartialAsync("_OffcanvasUser")

      @section Topbar {
@await Html.PartialAsync("_TopbarBrand", "Tela: Usuários & Perfis")

          <div class="d-flex align-items-center gap-2">
            <button class="btn btn-ghost" type="button" id="btnSeedReset" title="Restaurar demo">
              <i class="bi bi-arrow-counterclockwise"></i><span class="d-none d-sm-inline ms-1">Reset demo</span>
            </button>

            <button class="btn btn-ghost" type="button" id="btnExportUsers" title="Exportar usuários (CSV)">
              <i class="bi bi-filetype-csv"></i><span class="d-none d-sm-inline ms-1">Exportar</span>
            </button>

            <button class="btn btn-brand" type="button" id="btnPrimaryAction">
              <i class="bi bi-person-plus"></i><span class="d-none d-sm-inline ms-1">Novo usuário</span>
            </button>

                        @await Html.PartialAsync("_TopbarUserMenu", "Admin")
          </div>
}

      <!-- CONTENT -->
      <section class="content">
        <div class="page-title">
          <div>
            <h4>Usuários & Perfis</h4>
            <div class="subtitle">RBAC (Perfis/Permissões), convites, MFA e gestão de acesso. (Demo em localStorage)</div>
          </div>
        </div>

        <!-- KPIs -->
                @{
          var kpis = new[]
          {
            new { ColClass = "col-6 col-lg-3", Title = "Usuários", ValueStyle = "font-size:1.6rem;color:var(--lt-primary);", ValueId = "kpiUsers", Value = "0", PillIcon = "bi-people", PillText = "total", Hint = "Cadastrados (demo)." },
            new { ColClass = "col-6 col-lg-3", Title = "Ativos", ValueStyle = "font-size:1.6rem;color:var(--lt-primary);", ValueId = "kpiActive", Value = "0", PillIcon = "bi-check2-circle", PillText = "ok", Hint = "Acesso liberado." },
            new { ColClass = "col-6 col-lg-3", Title = "Convites", ValueStyle = "font-size:1.6rem;color:var(--lt-primary);", ValueId = "kpiInvites", Value = "0", PillIcon = "bi-envelope", PillText = "pendentes", Hint = "Aguardando ativação." },
            new { ColClass = "col-6 col-lg-3", Title = "Perfis", ValueStyle = "font-size:1.6rem;color:var(--lt-primary);", ValueId = "kpiRoles", Value = "0", PillIcon = "bi-shield-lock", PillText = "RBAC", Hint = "Roles cadastradas." }
          };
        }
        @await Html.PartialAsync("_KpiMiniRow", kpis)

        <div class="card-soft p-3 mb-3">
          <div class="d-flex flex-wrap align-items-center justify-content-between gap-2">
            <div class="d-flex flex-wrap align-items-center gap-2">
              <ul class="nav nav-tabs" id="mainTabs" role="tablist">
                <li class="nav-item" role="presentation">
                  <button class="nav-link active" id="tab-users" data-bs-toggle="tab" data-bs-target="#pane-users" type="button" role="tab">
                    <i class="bi bi-people me-1"></i>Usuários
                  </button>
                </li>
                <li class="nav-item" role="presentation">
                  <button class="nav-link" id="tab-roles" data-bs-toggle="tab" data-bs-target="#pane-roles" type="button" role="tab">
                    <i class="bi bi-shield-lock me-1"></i>Perfis & Permissões
                  </button>
                </li>
              </ul>

              <span class="pill d-none d-md-inline"><i class="bi bi-shield-check"></i>Princí­pio do menor privilégio</span>
            </div>

            <div class="d-flex flex-wrap gap-2 justify-content-end">
              <button class="btn btn-ghost btn-sm" id="btnAuditMock"><i class="bi bi-journal-text me-1"></i>Auditoria</button>
              <button class="btn btn-ghost btn-sm" id="btnNewRole"><i class="bi bi-plus-circle me-1"></i>Novo perfil</button>
              <button class="btn btn-brand btn-sm" id="btnNewUser"><i class="bi bi-person-plus me-1"></i>Novo usuário</button>
            </div>
          </div>
        </div>

        <div class="tab-content">
          <!-- USERS -->
          <div class="tab-pane fade show active" id="pane-users" role="tabpanel">
            <div class="card-soft p-3 mb-3">
              <div class="d-flex flex-wrap align-items-end justify-content-between gap-2">
                <div>
                  <div class="fw-bold">Lista de usuários</div>
                  <div class="text-muted small">Clique em um usuário para abrir o drawer de detalhes.</div>
                </div>

                <div class="d-flex flex-wrap gap-2 justify-content-end">
                  <div style="min-width:240px;">
                    <label class="form-label small mb-1">Buscar</label>
                    <div class="input-group">
                      <span class="input-group-text" style="background:rgba(255,255,255,.65)"><i class="bi bi-search"></i></span>
                      <input class="form-control" id="uSearch" placeholder="nome, email, dept...">
                    </div>
                  </div>
                  <div>
                    <label class="form-label small mb-1">Status</label>
                    <select class="form-select" id="uStatus" data-enum="usuarioStatusFilter"></select>
                  </div>
                  <div>
                    <label class="form-label small mb-1">Perfil</label>
                    <select class="form-select" id="uRole" data-enum="roleFilter"></select>
                  </div>
                </div>
              </div>

              <hr class="my-3 divider">

                            <lt-grid table-class="table table-sm align-middle mb-0" body-id="usersTbody">
                <lt-grid-header>
                  <tr>
                    <th>Usuario</th>
                    <th>Email</th>
                    <th>Departamento</th>
                    <th>Perfis</th>
                    <th>Status</th>
                    <th>MFA</th>
                    <th>Ultimo login</th>
                    <th class="text-end">Acoes</th>
                  </tr>
                </lt-grid-header>
              </lt-grid>

              <div class="d-flex align-items-center justify-content-between mt-2">
                <div class="text-muted small" id="usersHint">•</div>
                <div class="d-flex align-items-center gap-2">
                  <span class="pill"><i class="bi bi-table"></i><span id="usersCount">0</span> exibidos</span>
                </div>
              </div>
            </div>
          </div>

          <!-- ROLES -->
          <div class="tab-pane fade" id="pane-roles" role="tabpanel">
            <div class="roles-grid mb-3">
              <div class="card-soft p-3">
                <div class="d-flex align-items-start justify-content-between gap-2">
                  <div>
                    <div class="fw-bold">Perfis</div>
                    <div class="text-muted small">Clique para editar permissões.</div>
                  </div>
                  <span class="pill"><i class="bi bi-shield-lock"></i>RBAC</span>
                </div>

                <hr class="my-3 divider">

                <lt-list class="d-grid gap-2" id="rolesList"></lt-list>
              </div>

              <div class="card-soft p-3">
                <div class="d-flex flex-wrap align-items-start justify-content-between gap-2">
                  <div>
                    <div class="fw-bold" id="roleEditorTitle">•</div>
                    <div class="text-muted small" id="roleEditorDesc">Selecione um perfil ao lado.</div>
                  </div>
                  <div class="d-flex flex-wrap gap-2 justify-content-end">
                    <button class="btn btn-ghost btn-sm" id="btnRoleClone"><i class="bi bi-files me-1"></i>Clonar</button>
                    <button class="btn btn-ghost btn-sm" id="btnRoleDelete"><i class="bi bi-trash me-1"></i>Excluir</button>
                    <button class="btn btn-brand btn-sm" id="btnRoleSave"><i class="bi bi-check2-circle me-1"></i>Salvar</button>
                  </div>
                </div>

                <hr class="my-3 divider">

                <div class="row g-2 mb-2">
                  <div class="col-12 col-md-6">
                    <label class="form-label small">Nome do perfil</label>
                    <input class="form-control" id="roleName" placeholder="ex.: Recrutador">
                  </div>
                  <div class="col-12 col-md-6">
                    <label class="form-label small">Descrição</label>
                    <input class="form-control" id="roleDesc" placeholder="ex.: Triagem e matching (sem exclusões)">
                  </div>
                </div>

                <div class="d-flex flex-wrap gap-2 mb-2">
                  <span class="pill"><i class="bi bi-info-circle"></i>Permissões por módulo</span>
                  <span class="pill"><i class="bi bi-download"></i>Exportação controlada</span>
                  <span class="pill"><i class="bi bi-lock"></i>Admin = tudo</span>
                </div>

                                <lt-grid wrapper-class="perm-wrap" table-class="table table-sm align-middle mb-0 perm-table" body-id="permTbody">
                  <lt-grid-header>
                    <tr>
                      <th>Modulo</th>
                      <th>Visualizar</th>
                      <th>Criar</th>
                      <th>Editar</th>
                      <th>Excluir</th>
                      <th>Exportar</th>
                      <th>Admin</th>
                    </tr>
                  </lt-grid-header>
                </lt-grid>

                <div class="text-muted small mt-2">
                  <i class="bi bi-lightning-charge me-1"></i>
                  MVP real: validação de permissões no backend (JWT + claims/roles) + auditoria.
                </div>
              </div>
            </div>
          </div>
        </div>

        <div style="height:14px;"></div>
      </section>

            @section Footer {
        @{
          var footerItems = new[]
          {
            new { Icon = "bi-person-gear", Text = "Usu?rios & Perfis", Id = "", Class = "" },
            new { Icon = "bi-shield-check", Text = "LGPD", Id = "", Class = "" },
            new { Icon = "", Text = "build: demo", Id = "buildId", Class = "mono muted" }
          };
        }
        @await Html.PartialAsync("_Footer", footerItems)
      }

    

  @await Html.PartialAsync("_ModalUser")
  @await Html.PartialAsync("_ModalRole")

  <!-- TOASTS -->
  @await Html.PartialAsync("_Toast", new { Title = "Notificação", IconColor = "var(--lt-primary)" })

  <!-- Bootstrap JS (CDN) -->

@section Scripts {
  <script>
    window.__seedData = @Html.Raw(Model.SeedJson);
  </script>
<script src="~/js/views/usuarios-perfis.js" asp-append-version="true"></script>
}

