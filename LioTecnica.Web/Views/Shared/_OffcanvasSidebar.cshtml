<div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasSidebar">
    <div class="offcanvas-header border-bottom">
      <div class="d-flex align-items-center gap-2">
        <img id="logoMobile" alt="Devcraft Studio" style="width:34px;height:34px;border-radius:10px;background:#fff;padding:6px;object-fit:contain;">
        <div class="lh-1">
          <div class="fw-bold" style="color:var(--lt-primary)">Portal RH</div>
          <small class="text-muted">@ViewHelpers.SidebarSubtitle(ViewData)</small>
        </div>
      </div>
      <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body p-0 sidebar-scroll">
      <div class="p-2">
        <div class="small text-uppercase text-muted px-2 mt-2">Navegação</div>
        <div class="nav flex-column">
          <a class="nav-link rounded-3 px-3 py-2 @ViewHelpers.NavMobileActive(ViewContext, "Dashboard")" asp-controller="Dashboard" asp-action="Index"><i class="bi bi-speedometer2 me-2"></i>Dashboard</a>
          <a class="nav-link rounded-3 px-3 py-2 @ViewHelpers.NavMobileActive(ViewContext, "Vagas")" asp-controller="Vagas" asp-action="Index"><i class="bi bi-briefcase me-2"></i>Vagas</a>
          <a class="nav-link rounded-3 px-3 py-2 @ViewHelpers.NavMobileActive(ViewContext, "Candidatos")" asp-controller="Candidatos" asp-action="Index"><i class="bi bi-people me-2"></i>Candidatos</a>
          <a class="nav-link rounded-3 px-3 py-2 @ViewHelpers.NavMobileActive(ViewContext, "Triagem")" asp-controller="Triagem" asp-action="Index"><i class="bi bi-funnel me-2"></i>Triagem</a>
          <a class="nav-link rounded-3 px-3 py-2 @ViewHelpers.NavMobileActive(ViewContext, "Matching")" asp-controller="Matching" asp-action="Index"><i class="bi bi-stars me-2"></i>Matching</a>
          <a class="nav-link rounded-3 px-3 py-2 @ViewHelpers.NavMobileActive(ViewContext, "EntradaEmailPasta")" asp-controller="EntradaEmailPasta" asp-action="Index"><i class="bi bi-inbox me-2"></i>Entrada (Email/Pasta)</a>
          <a class="nav-link rounded-3 px-3 py-2 @ViewHelpers.NavMobileActive(ViewContext, "Relatorios")" asp-controller="Relatorios" asp-action="Index"><i class="bi bi-graph-up me-2"></i>Relatórios</a>
          <a class="nav-link rounded-3 px-3 py-2 @ViewHelpers.NavMobileActive(ViewContext, "Departamentos")" asp-controller="Departamentos" asp-action="Index"><i class="bi bi-diagram-2 me-2"></i>Departamentos</a>
          <a class="nav-link rounded-3 px-3 py-2 @ViewHelpers.NavMobileActive(ViewContext, "Gestores")" asp-controller="Gestores" asp-action="Index"><i class="bi bi-person-badge me-2"></i>Gestores</a>
          <a class="nav-link rounded-3 px-3 py-2 @ViewHelpers.NavMobileActive(ViewContext, "UsuariosPerfis")" asp-controller="UsuariosPerfis" asp-action="Index"><i class="bi bi-person-gear me-2"></i>Usuários & Perfis</a>
          <a class="nav-link rounded-3 px-3 py-2" href="#"><i class="bi bi-diagram-3 me-2"></i>RM Labore</a>
          <a class="nav-link rounded-3 px-3 py-2" href="#"><i class="bi bi-gear me-2"></i>Configurações</a>
        </div>
      </div>
    </div>
  </div>