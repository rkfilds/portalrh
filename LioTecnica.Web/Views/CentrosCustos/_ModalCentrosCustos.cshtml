<div class="modal fade" id="modalCostCenter" tabindex="-1" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content" style="border-radius: 18px; border: 1px solid var(--lt-border);">
            <div class="modal-header">
                <div>
                    <h5 class="modal-title fw-bold" id="modalCostCenterTitle">Novo centro de custo</h5>
                    <div class="text-muted small">Cadastre dados principais do centro de custo.</div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <input type="hidden" id="ccId">

                <div class="row g-2">
                    <div class="col-12 col-md-4">
                        <label class="form-label small text-muted">Código *</label>
                        <input class="form-control" id="ccCodigo" placeholder="CC-XXXX">
                    </div>

                    <div class="col-12 col-md-8">
                        <label class="form-label small text-muted">Centro de custo *</label>
                        <input class="form-control" id="ccNome" placeholder="Ex.: Administrativo / Produção / Logística">
                    </div>

                    <div class="col-12 col-md-4">
                        <label class="form-label small text-muted">Status</label>
                        <select class="form-select" id="ccStatus">
                            <option value="ativo">Ativo</option>
                            <option value="inativo">Inativo</option>
                        </select>
                    </div>

                    <div class="col-12 col-md-8">
                        <label class="form-label small text-muted">Descrição</label>
                        <input class="form-control" id="ccDescricao" placeholder="Resumo do escopo do centro de custo">
                    </div>

                    <!-- opcional: categoria/agrupador (se você quiser no futuro) -->
                    <div class="col-12 col-md-6">
                        <label class="form-label small text-muted">Grupo (opcional)</label>
                        <input class="form-control" id="ccGrupo" placeholder="Ex.: OPEX / CAPEX / Industrial / Corporativo">
                    </div>

                    <!-- opcional: unidade/filial responsável (se você quiser no futuro) -->
                    <div class="col-12 col-md-6">
                        <label class="form-label small text-muted">Unidade/Filial (opcional)</label>
                        <input class="form-control" id="ccUnidade" placeholder="Ex.: Matriz / Unidade SP / Unidade MG">
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-ghost" type="button" data-bs-dismiss="modal">
                    <i class="bi bi-x-lg me-1"></i>Cancelar
                </button>
                <button class="btn btn-brand" type="button" id="btnSaveCostCenter">
                    <i class="bi bi-check2 me-1"></i>Salvar
                </button>
            </div>
        </div>
    </div>
</div>

