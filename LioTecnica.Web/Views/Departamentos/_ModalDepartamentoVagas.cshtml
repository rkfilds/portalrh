<div class="modal fade" id="modalDeptDetalhes" tabindex="-1" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
  <div class="modal-dialog modal-xl modal-dialog-scrollable">
    <div class="modal-content" style="border-radius: 18px; border: 1px solid var(--lt-border);">
      <div class="modal-header">
        <div>
          <h5 class="modal-title fw-bold" id="deptDetailTitle">Detalhes do departamento</h5>
          <div class="text-muted small">Vagas relacionadas e dados do departamento.</div>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <div class="row g-2 mb-2">
          <div class="col-12 col-md-8">
            <div class="fw-bold" data-role="dept-name"></div>
            <div class="text-muted small" data-role="dept-code"></div>
          </div>
          <div class="col-12 col-md-4 text-md-end">
            <span data-role="dept-status-host"></span>
          </div>

          <div class="col-12 col-md-4">
            <div class="small text-muted">Area vinculada</div>
            <div class="fw-semibold" data-role="dept-area"></div>
          </div>
          <div class="col-12 col-md-4">
            <div class="small text-muted">Gestor</div>
            <div class="fw-semibold" data-role="dept-gestor"></div>
          </div>
          <div class="col-12 col-md-4">
            <div class="small text-muted">Headcount</div>
            <div class="fw-semibold" data-role="dept-headcount"></div>
          </div>
          <div class="col-12 col-md-6">
            <div class="small text-muted">Email</div>
            <div class="fw-semibold" data-role="dept-email"></div>
          </div>
          <div class="col-12 col-md-6">
            <div class="small text-muted">Filial</div>
            <div class="fw-semibold" data-role="dept-local"></div>
          </div>
          <div class="col-12">
            <div class="small text-muted">Descricao</div>
            <div class="fw-semibold" data-role="dept-desc"></div>
          </div>
        </div>

        <hr class="my-3 divider">

        <div class="d-flex align-items-center justify-content-between gap-2 mb-2">
          <div class="fw-semibold">Vagas do departamento</div>
          <span class="pill"><i class="bi bi-briefcase"></i><span id="deptVagasCount">0</span> vagas</span>
        </div>

        <div class="table-responsive">
          <table class="table align-middle mb-0">
            <thead>
              <tr>
                <th style="min-width: 120px;">Codigo</th>
                <th style="min-width: 220px;">Vaga</th>
                <th style="min-width: 140px;">Modalidade</th>
                <th style="min-width: 140px;">Status</th>
                <th style="min-width: 160px;">Local</th>
                <th class="text-end" style="min-width: 140px;">Atualizado</th>
                <th class="text-end" style="min-width: 120px;">Acoes</th>
              </tr>
            </thead>
            <tbody id="deptVagasTbody"></tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<template id="tpl-dept-vaga-row">
  <tr>
    <td class="mono" data-role="vaga-code"></td>
    <td data-role="vaga-title"></td>
    <td data-role="vaga-modalidade"></td>
    <td><span data-role="vaga-status-host"></span></td>
    <td data-role="vaga-local"></td>
    <td class="text-end mono" data-role="vaga-updated"></td>
    <td class="text-end">
      <button class="btn btn-ghost btn-sm" type="button" data-act="open-vaga">
        <i class="bi bi-box-arrow-up-right"></i>
      </button>
    </td>
  </tr>
</template>

<template id="tpl-dept-vaga-empty-row">
  <tr>
    <td colspan="7" class="text-center text-muted py-3">Nenhuma vaga vinculada.</td>
  </tr>
</template>

