<div class="modal fade" id="modalCargoDetalhes" tabindex="-1" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
  <div class="modal-dialog modal-xl modal-dialog-scrollable">
    <div class="modal-content" style="border-radius: 18px; border: 1px solid var(--lt-border);">
      <div class="modal-header">
        <div>
          <h5 class="modal-title fw-bold">Detalhes do cargo</h5>
          <div class="text-muted small">Gestores vinculados e informacoes do cargo.</div>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <div class="row g-2 mb-2">
          <div class="col-12 col-md-8">
            <div class="fw-bold" data-role="cargo-name"></div>
            <div class="text-muted small" data-role="cargo-code"></div>
          </div>
          <div class="col-12 col-md-4 text-md-end">
            <span data-role="cargo-status-host"></span>
          </div>

          <div class="col-12 col-md-4">
            <div class="small text-muted">Area</div>
            <div class="fw-semibold" data-role="cargo-area"></div>
          </div>
          <div class="col-12 col-md-4">
            <div class="small text-muted">Senioridade</div>
            <div class="fw-semibold" data-role="cargo-senioridade"></div>
          </div>
          <div class="col-12 col-md-4">
            <div class="small text-muted">Tipo</div>
            <div class="fw-semibold" data-role="cargo-tipo"></div>
          </div>
          <div class="col-12">
            <div class="small text-muted">Descricao</div>
            <div class="fw-semibold" data-role="cargo-desc"></div>
          </div>
        </div>

        <hr class="my-3 divider">

        <div class="d-flex align-items-center justify-content-between gap-2 mb-2">
          <div class="fw-semibold">Gestores com este cargo</div>
          <span class="pill"><i class="bi bi-person-badge"></i><span id="cargoGestoresCount">0</span> gestores</span>
        </div>
        <div class="table-responsive">
          <table class="table align-middle mb-0">
            <thead>
              <tr>
                <th style="min-width: 220px;">Gestor</th>
                <th style="min-width: 160px;">Area</th>
                <th style="min-width: 160px;">Unidade</th>
                <th style="min-width: 140px;">Status</th>
                <th class="text-end" style="min-width: 120px;">Headcount</th>
              </tr>
            </thead>
            <tbody id="cargoGestoresTbody"></tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<template id="tpl-cargo-gestor-row">
  <tr>
    <td>
      <div class="fw-semibold" data-role="gestor-name"></div>
      <div class="text-muted small" data-role="gestor-email"></div>
    </td>
    <td data-role="gestor-area"></td>
    <td data-role="gestor-unidade"></td>
    <td><span data-role="gestor-status-host"></span></td>
    <td class="text-end mono" data-role="gestor-headcount"></td>
  </tr>
</template>

<template id="tpl-cargo-gestor-empty-row">
  <tr>
    <td colspan="5" class="text-center text-muted py-3">Nenhum gestor vinculado.</td>
  </tr>
</template>

