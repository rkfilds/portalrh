<div class="modal fade" id="modalCategoriaDetalhes" tabindex="-1" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
  <div class="modal-dialog modal-xl modal-dialog-scrollable">
    <div class="modal-content" style="border-radius: 18px; border: 1px solid var(--lt-border);">
      <div class="modal-header">
        <div>
          <h5 class="modal-title fw-bold">Detalhes da categoria</h5>
          <div class="text-muted small">Vagas relacionadas e uso nos requisitos.</div>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <div class="row g-2 mb-2">
          <div class="col-12 col-md-8">
            <div class="fw-bold" data-role="cat-name"></div>
            <div class="text-muted small" data-role="cat-code"></div>
          </div>
          <div class="col-12 col-md-4 text-md-end">
            <span data-role="cat-status-host"></span>
          </div>

          <div class="col-12">
            <div class="small text-muted">Descricao</div>
            <div class="fw-semibold" data-role="cat-desc"></div>
          </div>
        </div>

        <hr class="my-3 divider">

        <div class="d-flex align-items-center justify-content-between gap-2 mb-2">
          <div class="fw-semibold">Vagas com requisitos da categoria</div>
          <div class="d-flex align-items-center gap-2">
            <span class="pill"><i class="bi bi-briefcase"></i><span id="catVagasCount">0</span> vagas</span>
            <span class="pill"><i class="bi bi-list-check"></i><span id="catReqCount">0</span> requisitos</span>
          </div>
        </div>

        <div class="table-responsive">
          <table class="table align-middle mb-0">
            <thead>
              <tr>
                <th style="min-width: 120px;">Codigo</th>
                <th style="min-width: 220px;">Vaga</th>
                <th style="min-width: 120px;">Requisitos</th>
                <th style="min-width: 140px;">Modalidade</th>
                <th style="min-width: 140px;">Status</th>
                <th style="min-width: 160px;">Local</th>
                <th class="text-end" style="min-width: 140px;">Atualizado</th>
                <th class="text-end" style="min-width: 120px;">Acoes</th>
              </tr>
            </thead>
            <tbody id="catVagasTbody"></tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<template id="tpl-cat-vaga-row">
  <tr>
    <td class="mono" data-role="vaga-code"></td>
    <td data-role="vaga-title"></td>
    <td class="mono" data-role="vaga-reqs"></td>
    <td data-role="vaga-modalidade"></td>
    <td><span data-role="vaga-status-host"></span></td>
    <td data-role="vaga-local"></td>
    <td class="text-end mono" data-role="vaga-updated"></td>
    <td class="text-end">
      <button class="btn btn-ghost btn-sm" type="button" data-act="open-vaga">
        <i class="bi bi-box-arrow-up-right"></i>
      </button>
    </td>
  </tr>
</template>

<template id="tpl-cat-vaga-empty-row">
  <tr>
    <td colspan="8" class="text-center text-muted py-3">Nenhuma vaga vinculada.</td>
  </tr>
</template>

