<div class="modal fade" id="modalRole" tabindex="-1" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content" style="border-radius:18px;border:1px solid var(--lt-border);">
        <div class="modal-header">
          <div>
            <div class="modal-title fw-bold">Novo perfil</div>
            <div class="text-muted small">Crie um role e depois ajuste permissões.</div>
          </div>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <div class="row g-2">
            <div class="col-12">
              <label class="form-label small">Nome</label>
              <input class="form-control" id="newRoleName" placeholder="ex.: Gestor">
            </div>
            <div class="col-12">
              <label class="form-label small">Descrição</label>
              <input class="form-control" id="newRoleDesc" placeholder="ex.: Visualiza relatórios e aprova candidatos">
            </div>
          </div>

          <hr class="my-3 divider">

          <div class="d-flex flex-wrap gap-2 justify-content-end">
            <button class="btn btn-ghost" type="button" data-bs-dismiss="modal"><i class="bi bi-x-circle me-1"></i>Cancelar</button>
            <button class="btn btn-brand" type="button" id="btnCreateRole"><i class="bi bi-plus-circle me-1"></i>Criar</button>
          </div>
        </div>
      </div>
    </div>
  </div>

