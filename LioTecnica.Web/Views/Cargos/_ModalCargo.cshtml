<div class="modal fade" id="modalCargo" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-scrollable">
    <div class="modal-content" style="border-radius: 18px; border: 1px solid var(--lt-border);">
      <div class="modal-header">
        <div>
          <h5 class="modal-title fw-bold" id="modalCargoTitle">Novo cargo</h5>
          <div class="text-muted small">Cadastre dados principais do cargo.</div>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <input type="hidden" id="cargoId">

        <div class="row g-2">
          <div class="col-12 col-md-4">
            <label class="form-label small text-muted">Codigo *</label>
            <input class="form-control" id="cargoCodigo" placeholder="CAR-XXX">
          </div>
          <div class="col-12 col-md-8">
            <label class="form-label small text-muted">Cargo *</label>
            <input class="form-control" id="cargoNome" placeholder="Ex.: Gerente de Producao">
          </div>

          <div class="col-12 col-md-4">
            <label class="form-label small text-muted">Status</label>
            <select class="form-select" id="cargoStatus">
              <option value="ativo">Ativo</option>
              <option value="inativo">Inativo</option>
            </select>
          </div>
          <div class="col-12 col-md-4">
            <label class="form-label small text-muted">Area</label>
            <select class="form-select" id="cargoArea">
              <option value="">Selecionar area</option>
            </select>
          </div>
          <div class="col-12 col-md-4">
            <label class="form-label small text-muted">Senioridade</label>
            <select class="form-select" id="cargoSenioridade">
              <option value="">Selecionar senioridade</option>
            </select>
          </div>

          <div class="col-12 col-md-6">
            <label class="form-label small text-muted">Tipo</label>
            <input class="form-control" id="cargoTipo" placeholder="Operacional, Lideranca, Administrativo">
          </div>
          <div class="col-12 col-md-6">
            <label class="form-label small text-muted">Descricao</label>
            <input class="form-control" id="cargoDescricao" placeholder="Resumo do escopo do cargo">
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-ghost" type="button" data-bs-dismiss="modal">
          <i class="bi bi-x-lg me-1"></i>Cancelar
        </button>
        <button class="btn btn-brand" type="button" id="btnSaveCargo">
          <i class="bi bi-check2 me-1"></i>Salvar
        </button>
      </div>
    </div>
  </div>
</div>
