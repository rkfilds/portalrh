@{
    ViewData["Title"] = "Portal RH • Liotécnica — Usuários & Perfis";
    ViewData["SidebarSubtitle"] = "Usuários & Perfis";
}



<!-- MOBILE SIDEBAR OFFCANVAS -->
  

  <!-- Drawer: detalhes do usuário -->
  <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasUser">
    <div class="offcanvas-header">
      <div class="d-flex align-items-center gap-2">
        <div class="avatar" id="drawerAvatar">U</div>
        <div class="lh-1">
          <div class="fw-bold" id="drawerName">—</div>
          <small class="text-muted" id="drawerEmail">—</small>
        </div>
      </div>
      <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body">
      <div class="d-flex flex-wrap gap-2 mb-3">
        <span class="tag" id="drawerStatusTag"><i class="bi bi-dot"></i>Status</span>
        <span class="pill"><i class="bi bi-shield-lock"></i><span id="drawerMfa">MFA</span></span>
      </div>

      <div class="card-soft p-3 mb-3">
        <div class="fw-bold mb-2">Resumo</div>
        <div class="kv"><div class="k">Departamento</div><div class="v" id="drawerDept">—</div></div>
        <div class="kv"><div class="k">Criado em</div><div class="v" id="drawerCreated">—</div></div>
        <div class="kv"><div class="k">Último login</div><div class="v" id="drawerLastLogin">—</div></div>
        <div class="kv"><div class="k">Perfis</div><div class="v" id="drawerRoles">—</div></div>
      </div>

      <div class="card-soft p-3 mb-3">
        <div class="fw-bold mb-2">Ações rápidas</div>
        <div class="d-grid gap-2">
          <button class="btn btn-ghost" id="btnDrawerEdit"><i class="bi bi-pencil me-1"></i>Editar usuário</button>
          <button class="btn btn-ghost" id="btnDrawerInvite"><i class="bi bi-envelope me-1"></i>Reenviar convite</button>
          <button class="btn btn-ghost" id="btnDrawerReset"><i class="bi bi-key me-1"></i>Reset de senha</button>
          <button class="btn btn-ghost" id="btnDrawerToggle"><i class="bi bi-toggle2-on me-1"></i>Ativar/Desativar</button>
          <button class="btn btn-outline-danger" id="btnDrawerDelete"><i class="bi bi-trash me-1"></i>Excluir (demo)</button>
        </div>
        <div class="text-muted small mt-2">
          <i class="bi bi-info-circle me-1"></i>Em produção: auditoria + políticas (LGPD) + trilha de alterações.
        </div>
      </div>
    </div>
  </div>

      @section Topbar {
<div class="d-flex align-items-center gap-2">
            <button class="btn btn-ghost d-lg-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasSidebar">
              <i class="bi bi-list"></i>
            </button>
            <div class="d-none d-md-block">
              <div class="fw-bold" style="color:var(--lt-primary); line-height:1.05;">Liotécnica • Portal RH</div>
              <small class="text-muted">Tela: Usuários & Perfis</small>
            </div>
          </div>

          <div class="d-flex align-items-center gap-2">
            <button class="btn btn-ghost" type="button" id="btnSeedReset" title="Restaurar demo">
              <i class="bi bi-arrow-counterclockwise"></i><span class="d-none d-sm-inline ms-1">Reset demo</span>
            </button>

            <button class="btn btn-ghost" type="button" id="btnExportUsers" title="Exportar usuários (CSV)">
              <i class="bi bi-filetype-csv"></i><span class="d-none d-sm-inline ms-1">Exportar</span>
            </button>

            <button class="btn btn-brand" type="button" id="btnPrimaryAction">
              <i class="bi bi-person-plus"></i><span class="d-none d-sm-inline ms-1">Novo usuário</span>
            </button>

            <div class="dropdown">
              <button class="btn btn-ghost dropdown-toggle" data-bs-toggle="dropdown">
                <i class="bi bi-person-circle me-1"></i><span class="d-none d-sm-inline">Admin</span>
              </button>
              <ul class="dropdown-menu dropdown-menu-end">
                <li><a class="dropdown-item" href="#"><i class="bi bi-person-gear me-2"></i>Meu perfil</a></li>
                <li><a class="dropdown-item" href="#"><i class="bi bi-bell me-2"></i>Notificações</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item text-danger" href="#"><i class="bi bi-box-arrow-right me-2"></i>Sair</a></li>
              </ul>
            </div>
          </div>
}

      <!-- CONTENT -->
      <section class="content">
        <div class="page-title">
          <div>
            <h4>Usuários & Perfis</h4>
            <div class="subtitle">RBAC (Perfis/Permissões), convites, MFA e gestão de acesso. (Demo em localStorage)</div>
          </div>
          <div class="d-flex align-items-center gap-2 flex-wrap justify-content-end">
            <span class="badge-soft"><i class="bi bi-clock me-1"></i><span id="nowLabel">—</span></span>
            <span class="badge-soft"><i class="bi bi-hdd me-1"></i>localStorage</span>
          </div>
        </div>

        <!-- KPIs -->
        <div class="row g-2 mb-3">
          <div class="col-6 col-lg-3">
            <div class="card-soft p-3">
              <div class="mini-title mb-1">Usuários</div>
              <div class="d-flex align-items-end justify-content-between">
                <div class="fw-bold" style="font-size:1.6rem;color:var(--lt-primary);" id="kpiUsers">0</div>
                <span class="pill"><i class="bi bi-people"></i>total</span>
              </div>
              <div class="text-muted small mt-1">Cadastrados (demo).</div>
            </div>
          </div>
          <div class="col-6 col-lg-3">
            <div class="card-soft p-3">
              <div class="mini-title mb-1">Ativos</div>
              <div class="d-flex align-items-end justify-content-between">
                <div class="fw-bold" style="font-size:1.6rem;color:var(--lt-primary);" id="kpiActive">0</div>
                <span class="pill"><i class="bi bi-check2-circle"></i>ok</span>
              </div>
              <div class="text-muted small mt-1">Acesso liberado.</div>
            </div>
          </div>
          <div class="col-6 col-lg-3">
            <div class="card-soft p-3">
              <div class="mini-title mb-1">Convites</div>
              <div class="d-flex align-items-end justify-content-between">
                <div class="fw-bold" style="font-size:1.6rem;color:var(--lt-primary);" id="kpiInvites">0</div>
                <span class="pill"><i class="bi bi-envelope"></i>pendentes</span>
              </div>
              <div class="text-muted small mt-1">Aguardando ativação.</div>
            </div>
          </div>
          <div class="col-6 col-lg-3">
            <div class="card-soft p-3">
              <div class="mini-title mb-1">Perfis</div>
              <div class="d-flex align-items-end justify-content-between">
                <div class="fw-bold" style="font-size:1.6rem;color:var(--lt-primary);" id="kpiRoles">0</div>
                <span class="pill"><i class="bi bi-shield-lock"></i>RBAC</span>
              </div>
              <div class="text-muted small mt-1">Roles cadastradas.</div>
            </div>
          </div>
        </div>

        <div class="card-soft p-3 mb-3">
          <div class="d-flex flex-wrap align-items-center justify-content-between gap-2">
            <div class="d-flex flex-wrap align-items-center gap-2">
              <ul class="nav nav-tabs" id="mainTabs" role="tablist">
                <li class="nav-item" role="presentation">
                  <button class="nav-link active" id="tab-users" data-bs-toggle="tab" data-bs-target="#pane-users" type="button" role="tab">
                    <i class="bi bi-people me-1"></i>Usuários
                  </button>
                </li>
                <li class="nav-item" role="presentation">
                  <button class="nav-link" id="tab-roles" data-bs-toggle="tab" data-bs-target="#pane-roles" type="button" role="tab">
                    <i class="bi bi-shield-lock me-1"></i>Perfis & Permissões
                  </button>
                </li>
              </ul>

              <span class="pill d-none d-md-inline"><i class="bi bi-shield-check"></i>Princípio do menor privilégio</span>
            </div>

            <div class="d-flex flex-wrap gap-2 justify-content-end">
              <button class="btn btn-ghost btn-sm" id="btnAuditMock"><i class="bi bi-journal-text me-1"></i>Auditoria (mock)</button>
              <button class="btn btn-ghost btn-sm" id="btnNewRole"><i class="bi bi-plus-circle me-1"></i>Novo perfil</button>
              <button class="btn btn-brand btn-sm" id="btnNewUser"><i class="bi bi-person-plus me-1"></i>Novo usuário</button>
            </div>
          </div>
        </div>

        <div class="tab-content">
          <!-- USERS -->
          <div class="tab-pane fade show active" id="pane-users" role="tabpanel">
            <div class="card-soft p-3 mb-3">
              <div class="d-flex flex-wrap align-items-end justify-content-between gap-2">
                <div>
                  <div class="fw-bold">Lista de usuários</div>
                  <div class="text-muted small">Clique em um usuário para abrir o drawer de detalhes.</div>
                </div>

                <div class="d-flex flex-wrap gap-2 justify-content-end">
                  <div style="min-width:240px;">
                    <label class="form-label small mb-1">Buscar</label>
                    <div class="input-group">
                      <span class="input-group-text" style="background:rgba(255,255,255,.65)"><i class="bi bi-search"></i></span>
                      <input class="form-control" id="uSearch" placeholder="nome, email, dept...">
                    </div>
                  </div>
                  <div>
                    <label class="form-label small mb-1">Status</label>
                    <select class="form-select" id="uStatus">
                      <option value="all" selected>Todos</option>
                      <option value="active">Ativo</option>
                      <option value="invited">Convidado</option>
                      <option value="disabled">Desativado</option>
                    </select>
                  </div>
                  <div>
                    <label class="form-label small mb-1">Perfil</label>
                    <select class="form-select" id="uRole">
                      <option value="all" selected>Todos</option>
                    </select>
                  </div>
                </div>
              </div>

              <hr class="my-3 divider">

              <div class="table-responsive">
                <table class="table table-sm align-middle mb-0">
                  <thead>
                    <tr>
                      <th>Usuário</th>
                      <th>Email</th>
                      <th>Departamento</th>
                      <th>Perfis</th>
                      <th>Status</th>
                      <th>MFA</th>
                      <th>Último login</th>
                      <th class="text-end">Ações</th>
                    </tr>
                  </thead>
                  <tbody id="usersTbody"></tbody>
                </table>
              </div>

              <div class="d-flex align-items-center justify-content-between mt-2">
                <div class="text-muted small" id="usersHint">—</div>
                <div class="d-flex align-items-center gap-2">
                  <span class="pill"><i class="bi bi-table"></i><span id="usersCount">0</span> exibidos</span>
                </div>
              </div>
            </div>
          </div>

          <!-- ROLES -->
          <div class="tab-pane fade" id="pane-roles" role="tabpanel">
            <div class="roles-grid mb-3">
              <div class="card-soft p-3">
                <div class="d-flex align-items-start justify-content-between gap-2">
                  <div>
                    <div class="fw-bold">Perfis</div>
                    <div class="text-muted small">Clique para editar permissões.</div>
                  </div>
                  <span class="pill"><i class="bi bi-shield-lock"></i>RBAC</span>
                </div>

                <hr class="my-3 divider">

                <div class="d-grid gap-2" id="rolesList"></div>
              </div>

              <div class="card-soft p-3">
                <div class="d-flex flex-wrap align-items-start justify-content-between gap-2">
                  <div>
                    <div class="fw-bold" id="roleEditorTitle">—</div>
                    <div class="text-muted small" id="roleEditorDesc">Selecione um perfil ao lado.</div>
                  </div>
                  <div class="d-flex flex-wrap gap-2 justify-content-end">
                    <button class="btn btn-ghost btn-sm" id="btnRoleClone"><i class="bi bi-files me-1"></i>Clonar</button>
                    <button class="btn btn-ghost btn-sm" id="btnRoleDelete"><i class="bi bi-trash me-1"></i>Excluir</button>
                    <button class="btn btn-brand btn-sm" id="btnRoleSave"><i class="bi bi-check2-circle me-1"></i>Salvar</button>
                  </div>
                </div>

                <hr class="my-3 divider">

                <div class="row g-2 mb-2">
                  <div class="col-12 col-md-6">
                    <label class="form-label small">Nome do perfil</label>
                    <input class="form-control" id="roleName" placeholder="ex.: Recrutador">
                  </div>
                  <div class="col-12 col-md-6">
                    <label class="form-label small">Descrição</label>
                    <input class="form-control" id="roleDesc" placeholder="ex.: Triagem e matching (sem exclusões)">
                  </div>
                </div>

                <div class="d-flex flex-wrap gap-2 mb-2">
                  <span class="pill"><i class="bi bi-info-circle"></i>Permissões por módulo</span>
                  <span class="pill"><i class="bi bi-download"></i>Exportação controlada</span>
                  <span class="pill"><i class="bi bi-lock"></i>Admin = tudo</span>
                </div>

                <div class="perm-wrap">
                  <table class="table table-sm align-middle mb-0 perm-table">
                    <thead>
                      <tr>
                        <th>Módulo</th>
                        <th>Visualizar</th>
                        <th>Criar</th>
                        <th>Editar</th>
                        <th>Excluir</th>
                        <th>Exportar</th>
                        <th>Admin</th>
                      </tr>
                    </thead>
                    <tbody id="permTbody"></tbody>
                  </table>
                </div>

                <div class="text-muted small mt-2">
                  <i class="bi bi-lightning-charge me-1"></i>
                  MVP real: validação de permissões no backend (JWT + claims/roles) + auditoria.
                </div>
              </div>
            </div>
          </div>
        </div>

        <div style="height:14px;"></div>
      </section>

      @section Footer {
<div class="d-flex flex-wrap align-items-center justify-content-between gap-2">
          <div>© <span id="year"></span> Liotécnica • Portal RH (MVP)</div>
          <div class="d-flex align-items-center gap-3">
            <span><i class="bi bi-person-gear me-1"></i>Usuários & Perfis</span>
            <span><i class="bi bi-shield-check me-1"></i>LGPD</span>
            <span class="mono muted" id="buildId">build: demo</span>
          </div>
        </div>
}

    

  @await Html.PartialAsync("_Modals")

  <!-- TOASTS -->
  <div class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index:1090;">
    <div id="appToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true" style="border-radius:14px;border:1px solid var(--lt-border);">
      <div class="toast-header">
        <i class="bi bi-bell me-2" style="color:var(--lt-primary)"></i>
        <strong class="me-auto" id="toastTitle">Notificação</strong>
        <small class="text-muted" id="toastTime">agora</small>
        <button type="button" class="btn-close ms-2 mb-1" data-bs-dismiss="toast"></button>
      </div>
      <div class="toast-body" id="toastBody">—</div>
    </div>
  </div>

  <!-- Bootstrap JS (CDN) -->

@section Scripts {
<script src="~/js/views/usuarios-perfis.js" asp-append-version="true"></script>
}
