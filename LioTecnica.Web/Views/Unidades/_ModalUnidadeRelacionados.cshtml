<div class="modal fade" id="modalUnidadeDetalhes" tabindex="-1" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
  <div class="modal-dialog modal-xl modal-dialog-scrollable">
    <div class="modal-content" style="border-radius: 18px; border: 1px solid var(--lt-border);">
      <div class="modal-header">
        <div>
          <h5 class="modal-title fw-bold">Detalhes da unidade</h5>
          <div class="text-muted small">Gestores e vagas relacionados.</div>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <div class="row g-2 mb-2">
          <div class="col-12 col-md-8">
            <div class="fw-bold" data-role="un-name"></div>
            <div class="text-muted small" data-role="un-code"></div>
          </div>
          <div class="col-12 col-md-4 text-md-end">
            <span data-role="un-status-host"></span>
          </div>

          <div class="col-12">
            <div class="small text-muted">Endereco</div>
            <div class="fw-semibold" data-role="un-address"></div>
          </div>
          <div class="col-12 col-md-4">
            <div class="small text-muted">Contato</div>
            <div class="fw-semibold" data-role="un-email"></div>
            <div class="fw-semibold" data-role="un-phone"></div>
          </div>
          <div class="col-12 col-md-4">
            <div class="small text-muted">Responsavel</div>
            <div class="fw-semibold" data-role="un-owner"></div>
          </div>
          <div class="col-12 col-md-4">
            <div class="small text-muted">Tipo</div>
            <div class="fw-semibold" data-role="un-type"></div>
          </div>
        </div>

        <hr class="my-3 divider">

        <div class="d-flex align-items-center justify-content-between gap-2 mb-2">
          <div class="fw-semibold">Gestores da unidade</div>
          <span class="pill"><i class="bi bi-person-badge"></i><span id="unGestoresCount">0</span> gestores</span>
        </div>
        <div class="table-responsive mb-3">
          <table class="table align-middle mb-0">
            <thead>
              <tr>
                <th style="min-width: 220px;">Gestor</th>
                <th style="min-width: 180px;">Cargo</th>
                <th style="min-width: 160px;">Area</th>
                <th style="min-width: 140px;">Status</th>
                <th class="text-end" style="min-width: 120px;">Headcount</th>
              </tr>
            </thead>
            <tbody id="unGestoresTbody"></tbody>
          </table>
        </div>

        <div class="d-flex align-items-center justify-content-between gap-2 mb-2">
          <div class="fw-semibold">Vagas por unidade</div>
          <span class="pill"><i class="bi bi-briefcase"></i><span id="unVagasCount">0</span> vagas</span>
        </div>
        <div class="table-responsive">
          <table class="table align-middle mb-0">
            <thead>
              <tr>
                <th style="min-width: 120px;">Codigo</th>
                <th style="min-width: 220px;">Vaga</th>
                <th style="min-width: 140px;">Modalidade</th>
                <th style="min-width: 140px;">Status</th>
                <th style="min-width: 160px;">Local</th>
                <th class="text-end" style="min-width: 140px;">Atualizado</th>
                <th class="text-end" style="min-width: 120px;">Acoes</th>
              </tr>
            </thead>
            <tbody id="unVagasTbody"></tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<template id="tpl-un-gestor-row">
  <tr>
    <td>
      <div class="fw-semibold" data-role="gestor-name"></div>
      <div class="text-muted small" data-role="gestor-email"></div>
    </td>
    <td data-role="gestor-cargo"></td>
    <td data-role="gestor-area"></td>
    <td><span data-role="gestor-status-host"></span></td>
    <td class="text-end mono" data-role="gestor-headcount"></td>
  </tr>
</template>

<template id="tpl-un-gestor-empty-row">
  <tr>
    <td colspan="5" class="text-center text-muted py-3">Nenhum gestor vinculado.</td>
  </tr>
</template>

<template id="tpl-un-vaga-row">
  <tr>
    <td class="mono" data-role="vaga-code"></td>
    <td data-role="vaga-title"></td>
    <td data-role="vaga-modalidade"></td>
    <td><span data-role="vaga-status-host"></span></td>
    <td data-role="vaga-local"></td>
    <td class="text-end mono" data-role="vaga-updated"></td>
    <td class="text-end">
      <button class="btn btn-ghost btn-sm" type="button" data-act="open-vaga">
        <i class="bi bi-box-arrow-up-right"></i>
      </button>
    </td>
  </tr>
</template>

<template id="tpl-un-vaga-empty-row">
  <tr>
    <td colspan="7" class="text-center text-muted py-3">Nenhuma vaga vinculada.</td>
  </tr>
</template>

