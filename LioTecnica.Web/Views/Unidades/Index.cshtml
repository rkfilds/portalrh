@model PageSeedViewModel
@{
    ViewData["Title"] = "Portal RH - Liotecnica - Unidades";
    ViewData["SidebarSubtitle"] = "Unidades";
}

@await Html.PartialAsync("_ModalUnidade")
@await Html.PartialAsync("_ModalUnidadeRelacionados")
@await Html.PartialAsync("_Toast")

@section Topbar {
    @await Html.PartialAsync("_TopbarBrand", "Tela: Unidades / Filiais")

    <div class="searchbox position-relative d-none d-md-block">
      <i class="bi bi-search"></i>
      <input id="globalSearchUnidade" class="form-control" placeholder="Buscar unidade..." />
    </div>

    <div class="d-flex align-items-center gap-2">
      <button class="btn btn-ghost" type="button" id="btnExportUnidade" title="Exportar unidades (CSV)">
        <i class="bi bi-filetype-csv"></i><span class="d-none d-sm-inline ms-1">Exportar</span>
      </button>
      <button class="btn btn-ghost" type="button" id="btnSeedReset" title="Restaurar demo">
        <i class="bi bi-arrow-counterclockwise"></i><span class="d-none d-sm-inline ms-1">Reset demo</span>
      </button>
      <button class="btn btn-brand" type="button" id="btnNewUnidade">
        <i class="bi bi-plus-lg"></i><span class="d-none d-sm-inline ms-1">Nova unidade</span>
      </button>
      @await Html.PartialAsync("_TopbarUserMenu", "RH")
    </div>
}

<section class="content">
  <div class="page-title">
    <div>
      <h4>Unidades e filiais</h4>
      <div class="subtitle">Gestao de unidades com equipes, vagas e contatos.</div>
    </div>
    <div class="d-flex align-items-center gap-2">
      <span class="badge-soft"><i class="bi bi-clock me-1"></i><span id="nowLabel">-</span></span>
      <span class="badge-soft"><i class="bi bi-hdd me-1"></i>localStorage</span>
    </div>
  </div>

  @{
    var kpis = new[]
    {
      new { ColClass = "col-6 col-lg-3", Title = "Unidades", ValueStyle = "font-size:1.6rem;color:var(--lt-primary);", ValueId = "kpiUnTotal", Value = "0", PillIcon = "bi-building", PillText = "total", Hint = "Unidades cadastradas." },
      new { ColClass = "col-6 col-lg-3", Title = "Ativas", ValueStyle = "font-size:1.6rem;color:var(--lt-primary);", ValueId = "kpiUnActive", Value = "0", PillIcon = "bi-check2-circle", PillText = "ativas", Hint = "Unidades em operacao." },
      new { ColClass = "col-6 col-lg-3", Title = "Headcount", ValueStyle = "font-size:1.6rem;color:var(--lt-primary);", ValueId = "kpiUnHeadcount", Value = "0", PillIcon = "bi-people", PillText = "pessoas", Hint = "Soma do headcount." },
      new { ColClass = "col-6 col-lg-3", Title = "Vagas abertas", ValueStyle = "font-size:1.6rem;color:var(--lt-primary);", ValueId = "kpiUnOpenRoles", Value = "0", PillIcon = "bi-briefcase", PillText = "abertas", Hint = "Vagas abertas por unidade." }
    };
  }
  @await Html.PartialAsync("_KpiMiniRow", kpis)

  <div class="card-soft p-3 mb-3">
    <div class="d-flex flex-wrap align-items-end justify-content-between gap-2">
      <div>
        <div class="fw-bold">Lista de unidades</div>
        <div class="text-muted small">Clique em uma unidade para ver gestores e vagas.</div>
      </div>
      <div class="d-flex flex-wrap gap-2 justify-content-end">
        <div style="min-width:240px;">
          <label class="form-label small mb-1">Buscar</label>
          <div class="input-group">
            <span class="input-group-text" style="background:rgba(255,255,255,.65)"><i class="bi bi-search"></i></span>
            <input class="form-control" id="uSearch" placeholder="nome, codigo, cidade...">
          </div>
        </div>
        <div>
          <label class="form-label small mb-1">Status</label>
          <select class="form-select" id="uStatus">
            <option value="all">Todos</option>
            <option value="ativo">Ativo</option>
            <option value="inativo">Inativo</option>
          </select>
        </div>
      </div>
    </div>

    <hr class="my-3 divider">

        <lt-grid table-class="table table-sm align-middle mb-0" body-id="unTbody">
      <lt-grid-header>
        <tr>
          <th>Unidade</th>
          <th>Status</th>
          <th>Headcount</th>
          <th>Contato</th>
          <th>Tipo</th>
          <th class="text-end">Acoes</th>
        </tr>
      </lt-grid-header>
    </lt-grid>

    <div class="d-flex align-items-center justify-content-between mt-2">
      <div class="text-muted small" id="unHint">-</div>
      <div class="d-flex align-items-center gap-2">
        <span class="pill"><i class="bi bi-table"></i><span id="unCount">0</span> exibidas</span>
      </div>
    </div>
  </div>

  <template id="tpl-un-row">
    <tr>
      <td>
        <div class="fw-semibold" data-role="un-name"></div>
        <div class="text-muted small" data-role="un-code"></div>
      </td>
      <td><span data-role="un-status-host"></span></td>
      <td class="mono" data-role="un-headcount"></td>
      <td>
        <div class="small text-muted" data-role="un-email"></div>
        <div class="small" data-role="un-phone"></div>
      </td>
      <td data-role="un-type"></td>
      <td class="text-end">
        <button class="btn btn-ghost btn-sm me-1" type="button" data-act="detail">
          <i class="bi bi-eye"></i>
        </button>
        <button class="btn btn-ghost btn-sm me-1" type="button" data-act="edit">
          <i class="bi bi-pencil"></i>
        </button>
        <button class="btn btn-ghost btn-sm text-danger" type="button" data-act="del">
          <i class="bi bi-trash3"></i>
        </button>
      </td>
    </tr>
  </template>

  <template id="tpl-un-empty-row">
    <tr>
      <td colspan="6" class="text-center text-muted py-3">Nenhuma unidade encontrada.</td>
    </tr>
  </template>

  <div style="height:14px;"></div>
</section>

@section Footer {
  @{
    var footerItems = new[]
    {
      new { Icon = "bi-building", Text = "Unidades", Id = "", Class = "" },
      new { Icon = "bi-shield-check", Text = "LGPD", Id = "", Class = "" },
      new { Icon = "", Text = "build: demo", Id = "buildId", Class = "mono muted" }
    };
  }
  @await Html.PartialAsync("_Footer", footerItems)
}

@section Scripts {
  <script>
    window.__seedData = @Html.Raw(Model.SeedJson);
  </script>
  <script src="~/js/views/unidades.js" asp-append-version="true"></script>
}
