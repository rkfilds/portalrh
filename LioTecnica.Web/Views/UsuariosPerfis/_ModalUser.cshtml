<div class="modal fade" id="modalUser" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
      <div class="modal-content" style="border-radius:18px;border:1px solid var(--lt-border);">
        <div class="modal-header">
          <div>
            <div class="modal-title fw-bold" id="userModalTitle">Novo usuário</div>
            <div class="text-muted small">Cadastro + perfis + status + MFA (demo).</div>
          </div>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          @{
            var statusOptions = EnumOptionsHelper.GetOptions<UsuarioStatus>();
            var mfaOptions = EnumOptionsHelper.GetOptions<UsuarioMfaOption>();
          }
          <input type="hidden" id="userId">

          <div class="row g-2">
            <div class="col-12 col-md-6">
              <label class="form-label small">Nome</label>
              <input class="form-control" id="userName" placeholder="ex.: João Silva">
            </div>
            <div class="col-12 col-md-6">
              <label class="form-label small">Email</label>
              <input class="form-control" id="userEmail" placeholder="ex.: joao@@empresa.com">
            </div>

            <div class="col-12 col-md-6">
              <label class="form-label small">Departamento</label>
              <input class="form-control" id="userDept" placeholder="ex.: RH">
            </div>

            <div class="col-6 col-md-3">
              <label class="form-label small">Status</label>
              <select class="form-select" id="userStatus">
                @foreach (var opt in statusOptions)
                {
                  <option value="@opt.Code">@opt.Text</option>
                }
              </select>
            </div>

            <div class="col-6 col-md-3">
              <label class="form-label small">MFA</label>
              <select class="form-select" id="userMfa">
                @foreach (var opt in mfaOptions)
                {
                  <option value="@opt.Code">@opt.Text</option>
                }
              </select>
            </div>

            <div class="col-12">
              <label class="form-label small">Perfis (roles)</label>
              <div class="d-flex flex-wrap gap-2" id="userRolesChips"></div>
              <div class="text-muted small mt-1">Selecione os perfis abaixo:</div>
              <div class="row g-2 mt-1" id="userRolesChecks"></div>
            </div>
          </div>

          <hr class="my-3 divider">

          <div class="d-flex flex-wrap gap-2 justify-content-end">
            <button class="btn btn-ghost" type="button" data-bs-dismiss="modal"><i class="bi bi-x-circle me-1"></i>Cancelar</button>
            <button class="btn btn-brand" type="button" id="btnUserSave"><i class="bi bi-check2-circle me-1"></i>Salvar</button>
          </div>
        </div>
      </div>
    </div>
  </div>

