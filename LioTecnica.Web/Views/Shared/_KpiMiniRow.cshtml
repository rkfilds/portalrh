@model IEnumerable<dynamic>
<div class="row g-2 mb-3">
@foreach (var item in Model)
{
  <div class="@item.ColClass">
    <div class="card-soft p-3">
      <div class="mini-title mb-1">@item.Title</div>
      <div class="d-flex align-items-end justify-content-between">
        <div class="fw-bold" style="@item.ValueStyle" id="@item.ValueId">@item.Value</div>
        <span class="pill"><i class="bi @item.PillIcon"></i>@item.PillText</span>
      </div>
      <div class="text-muted small mt-1">@item.Hint</div>
    </div>
  </div>
}
</div>
