<div class="modal fade" id="modalCategoria" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-scrollable">
    <div class="modal-content" style="border-radius: 18px; border: 1px solid var(--lt-border);">
      <div class="modal-header">
        <div>
          <h5 class="modal-title fw-bold" id="modalCategoriaTitle">Nova categoria</h5>
          <div class="text-muted small">Cadastre dados principais da categoria.</div>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <input type="hidden" id="catId">

        <div class="row g-2">
          <div class="col-12 col-md-4">
            <label class="form-label small text-muted">Codigo *</label>
            <input class="form-control" id="catCodigo" placeholder="CAT-XXX">
          </div>
          <div class="col-12 col-md-8">
            <label class="form-label small text-muted">Categoria *</label>
            <input class="form-control" id="catNome" placeholder="Ex.: Competencia">
          </div>

          <div class="col-12 col-md-4">
            <label class="form-label small text-muted">Status</label>
            <select class="form-select" id="catStatus">
              <option value="ativo">Ativo</option>
              <option value="inativo">Inativo</option>
            </select>
          </div>
          <div class="col-12 col-md-8">
            <label class="form-label small text-muted">Descricao</label>
            <input class="form-control" id="catDescricao" placeholder="Resumo do uso da categoria">
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-ghost" type="button" data-bs-dismiss="modal">
          <i class="bi bi-x-lg me-1"></i>Cancelar
        </button>
        <button class="btn btn-brand" type="button" id="btnSaveCategoria">
          <i class="bi bi-check2 me-1"></i>Salvar
        </button>
      </div>
    </div>
  </div>
</div>
